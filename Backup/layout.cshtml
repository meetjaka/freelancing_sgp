    <script>
        // Theme Toggle System
        const themeToggle = document.getElementById('theme-toggle');
        const htmlRoot = document.getElementById('htmlRoot');
        const lightIcons = document.querySelectorAll('.theme-icon-light');
        const darkIcons = document.querySelectorAll('.theme-icon-dark');
        const lightTooltips = document.querySelectorAll('.theme-tooltip-light');
        const darkTooltips = document.querySelectorAll('.theme-tooltip-dark');
        
        // Check for saved theme preference or default to light mode
        const currentTheme = localStorage.getItem('theme') || 'light';
        
        function setTheme(theme) {
            if (theme === 'dark') {
                htmlRoot.classList.add('dark');
                lightIcons.forEach(icon => icon.classList.add('hidden'));
                darkIcons.forEach(icon => icon.classList.remove('hidden'));
                lightTooltips.forEach(tooltip => tooltip.classList.add('hidden'));
                darkTooltips.forEach(tooltip => tooltip.classList.remove('hidden'));
            } else {
                htmlRoot.classList.remove('dark');
                lightIcons.forEach(icon => icon.classList.remove('hidden'));
                darkIcons.forEach(icon => icon.classList.add('hidden'));
                lightTooltips.forEach(tooltip => tooltip.classList.remove('hidden'));
                darkTooltips.forEach(tooltip => tooltip.classList.add('hidden'));
            }
            localStorage.setItem('theme', theme);
        }
        
        // Initialize theme
        setTheme(currentTheme);
        
        // Toggle theme on button click
        if (themeToggle) {
            themeToggle.addEventListener('click', function() {
                const newTheme = htmlRoot.classList.contains('dark') ? 'light' : 'dark';
                setTheme(newTheme);
            });
        }
        
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('open');
        });
        
        // Dropdown menu toggle
        document.querySelectorAll('.dropdown-container button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation();
                const menu = this.nextElementSibling;
                menu.classList.toggle('hidden');
            });
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function() {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
                menu.classList.add('hidden');
            });
            // Also close mobile menu if open
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenu && mobileMenu.classList.contains('open') && !event.target.closest('#mobile-menu') && !event.target.closest('#mobile-menu-btn')) {
                mobileMenu.classList.remove('open');
            }
        });
        
        // Navbar scroll effect
        const navbar = document.getElementById('main-navbar');
        function handleNavScroll() {
            if (window.scrollY > 20) {
                navbar.classList.remove('nav-transparent');
                navbar.classList.add('nav-scrolled');
            } else {
                navbar.classList.add('nav-transparent');
                navbar.classList.remove('nav-scrolled');
            }
        }
        window.addEventListener('scroll', handleNavScroll, { passive: true });
        handleNavScroll(); // Run on page load
    </script>
