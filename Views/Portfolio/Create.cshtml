@model CreatePortfolioDto
@using SGP_Freelancing.Models.DTOs;
@{
    ViewData["Title"] = "Create Portfolio";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fa fa-briefcase me-2"></i> Create Your Portfolio
                    </h4>
                </div>

                <div class="card-body p-5">
                    <form method="post" class="needs-validation">
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            <div class="alert alert-danger">
                                <strong>Please fix the following errors:</strong>
                                <ul class="mt-2 mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">
                                Portfolio Title
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" 
                                   placeholder="e.g., Professional Web Designer" required>
                            <small class="text-muted d-block mt-1">
                                A catchy title that describes your expertise and style
                            </small>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                Short Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="A brief overview of your portfolio..."></textarea>
                            <small class="text-muted d-block mt-1">
                                Keep it concise - this appears in portfolio listings
                            </small>
                        </div>

                        <!-- Detailed Bio -->
                        <div class="mb-4">
                            <label asp-for="DetailedBio" class="form-label fw-bold">
                                Detailed Bio
                            </label>
                            <textarea asp-for="DetailedBio" class="form-control" rows="5"
                                      placeholder="Tell your story, highlight your experience, skills, and approach..."></textarea>
                            <small class="text-muted d-block mt-1">
                                Show your personality and experience
                            </small>
                        </div>

                        <!-- Visibility -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Visibility</label>
                            <div class="form-check">
                                <input asp-for="IsPublic" type="checkbox" class="form-check-input" id="isPublic" checked>
                                <label class="form-check-label" for="isPublic">
                                    Make portfolio public (visible to all clients)
                                </label>
                            </div>
                            <small class="text-muted d-block mt-1">
                                You can change this anytime
                            </small>
                        </div>

                        <hr class="my-4">

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-check me-2"></i> Create Portfolio
                            </button>
                            <a asp-action="MyPortfolio" class="btn btn-outline-secondary btn-lg">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Tips -->
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fa fa-lightbulb text-warning me-2"></i> Tips for a Great Portfolio
                    </h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Be Specific:</strong> Use keywords relevant to your niche
                    </li>
                    <li class="list-group-item">
                        <strong>Show Value:</strong> Explain what makes your work unique
                    </li>
                    <li class="list-group-item">
                        <strong>Update Regularly:</strong> Add new projects and testimonials
                    </li>
                    <li class="list-group-item">
                        <strong>Professional Photos:</strong> Use high-quality images for cases
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
