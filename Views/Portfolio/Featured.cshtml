@model List<PortfolioDto>
@using SGP_Freelancing.Models.DTOs;
@{
    ViewData["Title"] = "Featured Portfolios";
}

<div class="container my-5">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-lg-8">
            <h1 class="display-4 fw-bold bg-gradient" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                ⭐ Featured Freelancers
            </h1>
            <p class="lead text-muted mt-2">Meet our most talented and highly-rated freelancers</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="fa fa-inbox fa-3x mb-3 text-info"></i>
            <p class="fs-5">No featured portfolios available yet.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">
                <i class="fa fa-arrow-left me-2"></i> Browse All Portfolios
            </a>
        </div>
    }
    else
    {
        <!-- Featured Carousel -->
        <div class="row mb-5">
            <div class="col-12">
                <div id="featuredCarousel" class="carousel slide shadow-lg rounded-3" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @for (int i = 0; i < Math.Min(3, Model.Count); i++)
                        {
                            <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="@i" 
                                    class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                        }
                    </div>

                    <div class="carousel-inner">
                        @for (int i = 0; i < Math.Min(3, Model.Count); i++)
                        {
                            var portfolio = Model[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div style="height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); position: relative; overflow: hidden;">
                                    @if (!string.IsNullOrEmpty(portfolio.CoverImageUrl))
                                    {
                                        <img src="@portfolio.CoverImageUrl" style="position: absolute; width: 100%; height: 100%; object-fit: cover; opacity: 0.7;">
                                    }
                                    <div style="position: absolute; inset: 0; background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);"></div>
                                    <div style="position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; color: white; text-align: center;">
                                        <div>
                                            <h2 class="fw-bold mb-2">⭐ @portfolio.FreelancerName</h2>
                                            <p class="lead">@portfolio.Title</p>
                                            <a asp-action="Details" asp-route-id="@portfolio.Id" class="btn btn-light btn-lg mt-3">
                                                View Profile
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Grid View -->
        <div class="row g-4">
            @foreach (var portfolio in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm hover-shadow transition position-relative">
                        <!-- Featured Badge -->
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-warning text-dark">
                                <i class="fa fa-star me-1"></i> Featured
                            </span>
                        </div>

                        <!-- Cover Image -->
                        <div class="position-relative" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); overflow: hidden;">
                            @if (!string.IsNullOrEmpty(portfolio.CoverImageUrl))
                            {
                                <img src="@portfolio.CoverImageUrl" alt="Cover" class="w-100 h-100" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center text-white">
                                    <i class="fa fa-image fa-4x opacity-50"></i>
                                </div>
                            }
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@portfolio.Title</h5>
                            <p class="card-text text-muted small mb-2">@portfolio.FreelancerName</p>

                            <div class="mb-3">
                                @if (portfolio.AverageRating > 0)
                                {
                                    <div class="rating">
                                        @for (int i = 0; i < (int)portfolio.AverageRating; i++)
                                        {
                                            <i class="fa fa-star text-warning"></i>
                                        }
                                        @if (portfolio.AverageRating % 1 > 0)
                                        {
                                            <i class="fa fa-star-half-alt text-warning"></i>
                                        }
                                        <span class="ms-2 text-muted small">@portfolio.AverageRating.ToString("F1")</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted small">No ratings yet</div>
                                }
                            </div>

                            <p class="card-text small text-muted">
                                <i class="fa fa-folder me-2"></i>@portfolio.TotalCases Cases
                                <br>
                                <i class="fa fa-comment me-2"></i>@portfolio.TotalTestimonials Testimonials
                            </p>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-white border-top">
                            <a asp-action="Details" asp-route-id="@portfolio.Id" class="btn btn-sm btn-primary w-100">
                                <i class="fa fa-eye me-2"></i> View Portfolio
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .hover-shadow:hover {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
        transform: translateY(-5px);
    }

    .transition {
        transition: all 0.3s ease;
    }

    .rating {
        letter-spacing: 2px;
    }

    .carousel-item img {
        object-fit: cover;
    }
</style>
