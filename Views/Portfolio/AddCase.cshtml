@model CreatePortfolioCaseDto
@using SGP_Freelancing.Models.DTOs;
@{
    ViewData["Title"] = "Add Case Study";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fa fa-briefcase me-2"></i> Add Case Study
                    </h4>
                </div>

                <div class="card-body p-5">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div class="alert alert-danger">
                            <strong>Please fix the following errors:</strong>
                            <ul class="mt-2 mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" class="needs-validation">
                        <input type="hidden" asp-for="PortfolioId">

                        <!-- Basic Information -->
                        <div class="mb-4">
                            <h6 class="fw-bold text-primary mb-3">Basic Information</h6>

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-bold">
                                    Project Title
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" class="form-control" placeholder="e.g., E-commerce Platform Design" required>
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold">
                                    Short Description
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="2" 
                                          placeholder="Brief overview..."></textarea>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DetailedDescription" class="form-label fw-bold">
                                    Detailed Description
                                </label>
                                <textarea asp-for="DetailedDescription" class="form-control" rows="4"
                                          placeholder="Describe the project in detail: challenges, solutions, results..."></textarea>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Client & Project Details -->
                        <div class="mb-4">
                            <h6 class="fw-bold text-primary mb-3">Project Details</h6>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ClientName" class="form-label fw-bold">
                                        Client Name
                                    </label>
                                    <input asp-for="ClientName" class="form-control" placeholder="Company/Client name">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Industry" class="form-label fw-bold">
                                        Industry
                                    </label>
                                    <input asp-for="Industry" class="form-control" placeholder="e.g., Technology, Healthcare">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="BudgetAmount" class="form-label fw-bold">
                                        Budget Amount
                                    </label>
                                    <input asp-for="BudgetAmount" class="form-control" type="number" step="0.01" placeholder="5000">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="BudgetCurrency" class="form-label fw-bold">
                                        Currency
                                    </label>
                                    <select asp-for="BudgetCurrency" class="form-control">
                                        <option>USD</option>
                                        <option>EUR</option>
                                        <option>GBP</option>
                                        <option>AUD</option>
                                        <option>CAD</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CompletionDate" class="form-label fw-bold">
                                    Completion Date
                                </label>
                                <input asp-for="CompletionDate" class="form-control" type="date">
                            </div>

                            <div class="mb-3">
                                <label asp-for="ProjectUrl" class="form-label fw-bold">
                                    Project URL
                                </label>
                                <input asp-for="ProjectUrl" class="form-control" 
                                       placeholder="https://example.com/project" type="url">
                                <small class="text-muted">Link to live project or case study</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Technologies & Display -->
                        <div class="mb-4">
                            <h6 class="fw-bold text-primary mb-3">Additional Details</h6>

                            <div class="mb-3">
                                <label asp-for="Technologies" class="form-label fw-bold">
                                    Technologies Used
                                </label>
                                <input asp-for="Technologies" class="form-control" 
                                       placeholder="e.g., React, Node.js, MongoDB, AWS (comma-separated)">
                            </div>

                            <div class="mb-3">
                                <label asp-for="DisplayOrder" class="form-label fw-bold">
                                    Display Order
                                </label>
                                <input asp-for="DisplayOrder" class="form-control" type="number" placeholder="0">
                                <small class="text-muted">Lower numbers appear first (0, 1, 2...)</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Form Actions -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-plus me-2"></i> Add Case Study
                            </button>
                            <a asp-action="Edit" asp-route-id="@Model.PortfolioId" class="btn btn-outline-secondary btn-lg">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tips -->
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fa fa-lightbulb text-warning me-2"></i> Tips for Great Case Studies
                    </h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Tell a Story:</strong> Explain the challenge, your approach, and the results
                    </li>
                    <li class="list-group-item">
                        <strong>Use Numbers:</strong> Include metrics showing impact (traffic, conversions, etc.)
                    </li>
                    <li class="list-group-item">
                        <strong>Highlight Uniqueness:</strong> What made your solution special?
                    </li>
                    <li class="list-group-item">
                        <strong>Add High-Quality Images:</strong> Visual proof is powerful
                    </li>
                    <li class="list-group-item">
                        <strong>Link to Live Project:</strong> Let clients see your work in action
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
