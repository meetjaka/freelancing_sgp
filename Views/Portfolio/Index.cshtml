@model List<PortfolioDto>
@using SGP_Freelancing.Models.DTOs;
@{
    ViewData["Title"] = "Freelancer Portfolios";
}

<div class="container my-5">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-lg-8">
            <h1 class="display-4 fw-bold bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                Selected Freelancer Portfolios
            </h1>
            <p class="lead text-muted mt-2">Explore the best work samples and case studies from our top freelancers</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            @if (User.IsInRole("Freelancer"))
            {
                <a asp-action="MyPortfolio" class="btn btn-primary btn-lg">
                    <i class="fa fa-briefcase me-2"></i> My Portfolio
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="fa fa-inbox fa-3x mb-3 text-info"></i>
            <p class="fs-5">No portfolios available yet.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var portfolio in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm hover-shadow transition">
                        <!-- Cover Image -->
                        <div class="position-relative" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); overflow: hidden;">
                            @if (!string.IsNullOrEmpty(portfolio.CoverImageUrl))
                            {
                                <img src="@portfolio.CoverImageUrl" alt="Cover" class="w-100 h-100" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center text-white">
                                    <i class="fa fa-image fa-4x opacity-50"></i>
                                </div>
                            }
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@portfolio.Title</h5>
                            <p class="card-text text-muted small mb-2">@portfolio.FreelancerName</p>

                            <div class="mb-3">
                                @if (portfolio.AverageRating > 0)
                                {
                                    <div class="rating">
                                        @for (int i = 0; i < (int)portfolio.AverageRating; i++)
                                        {
                                            <i class="fa fa-star text-warning"></i>
                                        }
                                        @if (portfolio.AverageRating % 1 > 0)
                                        {
                                            <i class="fa fa-star-half-alt text-warning"></i>
                                        }
                                        <span class="ms-2 text-muted small">@portfolio.AverageRating.ToString("F1")</span>
                                    </div>
                                }
                            </div>

                            <p class="card-text small text-muted">
                                <i class="fa fa-folder me-2"></i>@portfolio.TotalCases Cases
                                <br>
                                <i class="fa fa-comment me-2"></i>@portfolio.TotalTestimonials Testimonials
                            </p>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-white border-top">
                            <a asp-action="Details" asp-route-id="@portfolio.Id" class="btn btn-sm btn-primary w-100">
                                <i class="fa fa-eye me-2"></i> View Portfolio
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .hover-shadow:hover {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
        transform: translateY(-5px);
    }

    .transition {
        transition: all 0.3s ease;
    }

    .rating {
        letter-spacing: 2px;
    }
</style>
