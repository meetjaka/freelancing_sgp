@model List<PortfolioDto>
@using SGP_Freelancing.Models.DTOs;
@{
    ViewData["Title"] = "Freelancer Portfolios";
}

<!-- Portfolio Index/Browse Page -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 text-white py-16 md:py-24">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row items-center justify-between gap-8">
                <div class="flex-1">
                    <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
                        Discover Freelancer Portfolios
                    </h1>
                    <p class="text-lg md:text-xl text-indigo-100 mb-6">
                        Explore the best work samples and case studies from our top-rated freelancers
                    </p>
                    @if (User.IsInRole("Freelancer"))
                    {
                        <a asp-action="MyPortfolio" class="inline-flex items-center px-8 py-4 bg-white text-indigo-600 font-bold rounded-lg hover:bg-indigo-50 transition duration-300 shadow-lg hover:shadow-xl">
                            <i class="fas fa-briefcase mr-2"></i>
                            View My Portfolio
                        </a>
                    }
                </div>
                <div class="hidden md:block flex-1 text-center">
                    <div class="w-48 h-48 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                        <i class="fas fa-images text-white text-7xl opacity-70"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-lg mb-8 animate-slide-in">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 text-2xl mr-3"></i>
                    <p class="text-green-800 font-medium">@TempData["Success"]</p>
                </div>
            </div>
        }

        <!-- Empty State -->
        @if (Model == null || Model.Count == 0)
        {
            <div class="bg-white rounded-2xl shadow-lg p-16 text-center">
                <div class="mb-6">
                    <div class="w-28 h-28 bg-gradient-to-br from-slate-200 to-slate-300 rounded-full flex items-center justify-center mx-auto">
                        <i class="fas fa-briefcase text-slate-600 text-6xl"></i>
                    </div>
                </div>
                <h2 class="text-3xl font-bold text-slate-900 mb-4">No Portfolios Available Yet</h2>
                <p class="text-slate-600 text-lg mb-8 max-w-md mx-auto">
                    Be the first to showcase your work! Create a portfolio to display your best projects to potential clients.
                </p>
                @if (User.IsInRole("Freelancer"))
                {
                    <a asp-action="Create" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-lg hover:shadow-lg transition duration-300">
                        <i class="fas fa-plus mr-2"></i>
                        Create Your Portfolio
                    </a>
                }
            </div>
        }
        else
        {
            <!-- Portfolio Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var portfolio in Model)
                {
                    <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl overflow-hidden transition duration-300 transform hover:-translate-y-2">
                        <!-- Cover Image -->
                        <div class="relative h-48 bg-gradient-to-br from-indigo-600 to-purple-600 overflow-hidden">
                            @if (!string.IsNullOrEmpty(portfolio.CoverImageUrl))
                            {
                                <img src="@portfolio.CoverImageUrl" 
                                     alt="@portfolio.Title"
                                     class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <i class="fas fa-image text-white text-6xl opacity-40"></i>
                                </div>
                            }

                            <!-- Badge -->
                            @if (portfolio.IsFeatured)
                            {
                                <div class="absolute top-4 right-4">
                                    <span class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white font-bold rounded-full text-sm shadow-lg">
                                        <i class="fas fa-star mr-1"></i> Featured
                                    </span>
                                </div>
                            }
                        </div>

                        <!-- Portfolio Info -->
                        <div class="p-6">
                            <!-- Freelancer Info -->
                            <div class="flex items-center mb-4">
                                <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm">
                                    @portfolio.FreelancerName.FirstOrDefault()
                                </div>
                                <div class="ml-3 flex-1">
                                    <p class="font-semibold text-slate-900">@portfolio.FreelancerName</p>
                                    <p class="text-xs text-slate-500">Freelancer</p>
                                </div>
                            </div>

                            <!-- Title -->
                            <h3 class="text-xl font-bold text-slate-900 mb-2 line-clamp-2">
                                @portfolio.Title
                            </h3>

                            <!-- Rating -->
                            @if (portfolio.AverageRating > 0)
                            {
                                <div class="flex items-center gap-2 mb-4">
                                    <div class="flex gap-1">
                                        @for (int i = 0; i < (int)portfolio.AverageRating; i++)
                                        {
                                            <i class="fas fa-star text-yellow-400"></i>
                                        }
                                        @if (portfolio.AverageRating % 1 > 0)
                                        {
                                            <i class="fas fa-star-half-alt text-yellow-400"></i>
                                        }
                                    </div>
                                    <span class="text-sm font-semibold text-slate-700">
                                        @portfolio.AverageRating.ToString("F1")
                                    </span>
                                </div>
                            }

                            <!-- Stats -->
                            <div class="flex gap-4 mb-6 text-sm text-slate-600 border-t border-b border-slate-200 py-4">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-images text-indigo-600"></i>
                                    <span class="font-semibold">@portfolio.TotalCases</span>
                                    <span class="text-xs">Case@(portfolio.TotalCases != 1 ? "s" : "")</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-comments text-purple-600"></i>
                                    <span class="font-semibold">@portfolio.TotalTestimonials</span>
                                    <span class="text-xs">Review@(portfolio.TotalTestimonials != 1 ? "s" : "")</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-eye text-pink-600"></i>
                                    <span class="font-semibold">@portfolio.ViewCount</span>
                                    <span class="text-xs">Views</span>
                                </div>
                            </div>

                            <!-- View Button -->
                            <a asp-action="Details" 
                               asp-route-id="@portfolio.Id" 
                               class="w-full flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-lg hover:shadow-lg transition duration-300 group-hover:from-purple-600 group-hover:to-pink-600">
                                <i class="fas fa-eye mr-2"></i>
                                View Portfolio
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    @@keyframes slide-in {
        from {
            transform: translateX(-100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
    
    .animate-slide-in {
        animation: slide-in 0.3s ease-out;
    }
    
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>