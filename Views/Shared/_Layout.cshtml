</head>
<body class="font-sans bg-neutral-50 min-h-screen text-neutral-700">
    <header>
        <!-- Premium Navbar -->
        <nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-lg border-b border-slate-200/50">
            <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <!-- Brand -->
                    <a class="flex items-center gap-3 group" asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="relative w-10 h-10 flex items-center justify-center">
                            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl blur-sm opacity-75 group-hover:opacity-100 transition-opacity duration-300"></div>
                            <div class="relative bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                                <i class="fas fa-handshake text-xl w-10 h-10 flex items-center justify-center"></i>
                            </div>
                        </div>
                        <div class="hidden sm:block">
                            <span class="text-xl font-bold text-slate-800">SGP Freelancing</span>
                        </div>
                    </a>

                    <!-- Search Bar (Centered) -->
                    <div class="hidden lg:flex flex-1 justify-center px-12">
                        <div class="relative w-full max-w-lg">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <i class="fas fa-search text-slate-400"></i>
                            </div>
                            <input type="text" placeholder="What service are you looking for today?" 
                                   class="w-full pl-11 pr-4 py-2.5 bg-slate-100 border-transparent rounded-full text-sm text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                        </div>
                    </div>

                    <!-- Mobile Menu Button -->
                    <button id="mobile-menu-btn" class="lg:hidden w-10 h-10 rounded-full border border-slate-200 text-slate-700 hover:bg-slate-50 transition-all">
                        <i class="fas fa-bars text-lg"></i>
                    </button>

                    <!-- Right Actions -->
                    <div class="hidden lg:flex items-center gap-2 text-sm font-semibold text-slate-700">
                        <a class="px-3 py-2 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Explore</a>
                        <a class="px-3 py-2 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Become a Seller</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="relative w-10 h-10 flex items-center justify-center rounded-full hover:bg-slate-100 text-slate-600 hover:text-indigo-600 transition-colors" 
                               asp-area="" asp-controller="Message" asp-action="Index">
                                <i class="fas fa-envelope text-lg"></i>
                                <span class="absolute top-1 right-1 w-4 h-4 bg-rose-500 text-white text-[10px] font-bold rounded-full flex items-center justify-center">3</span>
                            </a>
                            <div class="relative dropdown-container">
                                <button class="flex items-center gap-2 px-2 py-1.5 rounded-full border border-transparent hover:bg-slate-100 transition-all">
                                    <div class="w-9 h-9 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white text-sm font-bold">
                                        @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                </button>
                                <div class="hidden dropdown-menu absolute right-0 mt-3 w-64 bg-white border border-slate-200/50 rounded-xl shadow-2xl py-2 overflow-hidden">
                                    <div class="px-4 py-3 border-b border-slate-100">
                                        <p class="text-sm font-semibold text-slate-900">@User.Identity.Name</p>
                                        <p class="text-xs text-slate-500 mt-0.5">@(User.Identity.Name)@@example.com</p>
                                    </div>
                                    <div class="py-2">
                                        <a class="flex items-center px-4 py-2.5 text-slate-700 hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                                           asp-area="" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user w-5 text-slate-400"></i>
                                            <span class="ml-3 font-medium">Profile</span>
                                        </a>
                                        <a class="flex items-center px-4 py-2.5 text-slate-700 hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                                           asp-area="" asp-controller="Project" asp-action="MyProjects">
                                            <i class="fas fa-folder-open w-5 text-slate-400"></i>
                                            <span class="ml-3 font-medium">My Projects</span>
                                        </a>
                                        <a class="flex items-center px-4 py-2.5 text-slate-700 hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                                           asp-area="" asp-controller="Settings" asp-action="Index">
                                            <i class="fas fa-cog w-5 text-slate-400"></i>
                                            <span class="ml-3 font-medium">Settings</span>
                                        </a>
                                    </div>
                                    <div class="border-t border-slate-100 pt-2">
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="flex items-center w-full px-4 py-2.5 text-rose-600 hover:bg-rose-50 transition-all">
                                                <i class="fas fa-sign-out-alt w-5"></i>
                                                <span class="ml-3 font-medium">Sign Out</span>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="px-4 py-2 rounded-lg hover:bg-slate-100 transition-colors" 
                               asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
