                    <a class="nav-cat-link px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-all duration-300" href="#">Business</a>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-menu" class="hidden lg:hidden px-4 sm:px-6 pb-4 border-t border-white/10">
                    <div class="relative mt-4">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-search text-white/30"></i>
                        </div>
                        <input type="text" placeholder="Search services..." 
                               class="w-full pl-11 pr-4 py-2.5 bg-white/5 border border-white/10 rounded-full text-sm text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:bg-white/10">
                    </div>

                    <div class="mt-4 space-y-1">
                        <a class="flex items-center px-4 py-2 text-white/80 font-semibold rounded-lg hover:bg-indigo-500/20 hover:text-white transition-all" 
                           asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home w-5 mr-3"></i>Home
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="flex items-center px-4 py-2 text-white/80 font-semibold rounded-lg hover:bg-indigo-500/20 hover:text-white transition-all" 
                               asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-chart-line w-5 mr-3"></i>Dashboard
                            </a>
                        }
                        <a class="flex items-center px-4 py-2 text-white/80 font-semibold rounded-lg hover:bg-indigo-500/20 hover:text-white transition-all" 
                           asp-area="" asp-controller="Project" asp-action="Index">
                            <i class="fas fa-briefcase w-5 mr-3"></i>Projects
