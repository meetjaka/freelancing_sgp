    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
        
        // Dropdown menu toggle
        document.querySelectorAll('.dropdown-container button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation();
                const menu = this.nextElementSibling;
                menu.classList.toggle('hidden');
            });
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function() {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
                menu.classList.add('hidden');
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (TempData["Success"] != null)
    {
        <div data-temp-success="@TempData["Success"]"></div>
    }
    @if (TempData["Error"] != null)
    {
        <div data-temp-error="@TempData["Error"]"></div>
    }
    @if (TempData["Warning"] != null)
    {
        <div data-temp-warning="@TempData["Warning"]"></div>
    }
    @if (TempData["Info"] != null)
    {
        <div data-temp-info="@TempData["Info"]"></div>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
