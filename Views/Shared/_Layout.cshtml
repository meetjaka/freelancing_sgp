                    <a class="px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Graphics & Design</a>
                    <a class="px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Programming & Tech</a>
                    <a class="px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Digital Marketing</a>
                    <a class="px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Video & Animation</a>
                    <a class="px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Writing & Translation</a>
                    <a class="px-3 py-1.5 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-colors" href="#">Business</a>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-menu" class="hidden lg:hidden px-4 sm:px-6 pb-4">
                    <div class="relative mt-4">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-search text-slate-400"></i>
                        </div>
                        <input type="text" placeholder="Search services..." 
                               class="w-full pl-11 pr-4 py-2.5 bg-slate-100 border-transparent rounded-full text-sm text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <div class="mt-4 space-y-1">
                        <a class="flex items-center px-4 py-2 text-slate-700 font-semibold rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                           asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home w-5 mr-3"></i>Home
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="flex items-center px-4 py-2 text-slate-700 font-semibold rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                               asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-chart-line w-5 mr-3"></i>Dashboard
                            </a>
                        }
                        <a class="flex items-center px-4 py-2 text-slate-700 font-semibold rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                           asp-area="" asp-controller="Project" asp-action="Index">
                            <i class="fas fa-briefcase w-5 mr-3"></i>Projects
                        </a>
                    </div>

                    <div class="mt-4 border-t border-slate-200 pt-4">
                        <p class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Categories</p>
                        <div class="mt-2 grid grid-cols-2 gap-2 text-sm font-medium text-slate-600">
                            <a class="px-3 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" href="#">Graphics & Design</a>
                            <a class="px-3 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" href="#">Programming</a>
                            <a class="px-3 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" href="#">Marketing</a>
                            <a class="px-3 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" href="#">Video</a>
                            <a class="px-3 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" href="#">Writing</a>
                            <a class="px-3 py-2 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" href="#">Business</a>
                        </div>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="border-t border-slate-200 mt-4 pt-2">
                            <a class="flex items-center px-4 py-2 text-slate-700 font-semibold rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition-all" 
                               asp-area="" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user w-5 mr-3"></i>My Profile
                            </a>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="flex items-center w-full px-4 py-2 text-rose-600 font-semibold rounded-lg hover:bg-rose-50 transition-all">
                                    <i class="fas fa-sign-out-alt w-5 mr-3"></i>Sign Out
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="border-t border-slate-200 mt-4 pt-3 space-y-2">
                            <a class="block px-4 py-2 text-center text-slate-700 font-semibold rounded-lg border border-slate-200 hover:border-indigo-400 hover:text-indigo-600 transition-all" 
                               asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            <a class="block px-4 py-2 text-center bg-slate-800 text-white font-bold rounded-lg hover:bg-slate-900 transition-all" 
                               asp-area="" asp-controller="Account" asp-action="Register">Join</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Add spacing for fixed navbar -->
    <div class="h-28"></div>
    
    <main role="main" class="min-h-screen">
        @RenderBody()
    </main>

