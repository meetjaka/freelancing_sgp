<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGP Freelancing Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <style>
        body { font-family: 'Inter', sans-serif !important; }
        
        /* Modern Navbar Styles */
        .modern-navbar {
            background: rgba(102, 126, 234, 0.95) !important;
            backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 1030;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }
        
        .navbar-brand {
            font-size: 1.5rem !important;
            font-weight: 800 !important;
            letter-spacing: -0.5px;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }
        
        .navbar-brand:hover {
            transform: scale(1.05);
        }
        
        .brand-icon {
            background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
            color: #667eea;
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            font-size: 1.2rem;
            box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
        }
        
        .navbar-search {
            position: relative;
            max-width: 400px;
            margin: 0 20px;
        }
        
        .navbar-search input {
            background: rgba(255, 255, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 8px 20px 8px 45px;
            color: white;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .navbar-search input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }
        
        .navbar-search input:focus {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.4);
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
            outline: none;
        }
        
        .navbar-search .search-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.8);
        }
        
        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            padding: 10px 18px !important;
            border-radius: 10px;
            transition: all 0.3s ease;
            margin: 0 2px;
            position: relative;
        }
        
        .nav-link:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }
        
        .nav-link.active {
            background: rgba(255, 255, 255, 0.2);
        }
        
        .nav-link i {
            font-size: 1.1rem;
        }
        
        /* Notification Badge */
        .nav-notification {
            position: relative;
        }
        
        .notification-badge {
            position: absolute;
            top: 5px;
            right: 8px;
            background: #ff4757;
            color: white;
            font-size: 0.65rem;
            font-weight: 700;
            padding: 2px 6px;
            border-radius: 10px;
            border: 2px solid #667eea;
            animation: pulse 2s infinite;
        }
        
        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }
        
        /* Dropdown Styles */
        .dropdown-menu {
            background: white;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            padding: 10px;
            margin-top: 10px;
            min-width: 240px;
        }
        
        .dropdown-item {
            border-radius: 10px;
            padding: 12px 18px;
            font-weight: 500;
            transition: all 0.3s ease;
            color: #333;
        }
        
        .dropdown-item:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateX(5px);
        }
        
        .dropdown-item i {
            width: 20px;
        }
        
        .dropdown-divider {
            margin: 8px 0;
            opacity: 0.1;
        }
        
        /* User Profile Dropdown */
        .user-dropdown-toggle {
            display: flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.15);
            padding: 8px 16px !important;
            border-radius: 25px;
            transition: all 0.3s ease;
        }
        
        .user-dropdown-toggle:hover {
            background: rgba(255, 255, 255, 0.25);
        }
        
        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
            color: #667eea;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            margin-right: 10px;
            border: 2px solid rgba(255, 255, 255, 0.5);
        }
        
        /* Auth Buttons */
        .btn-navbar-primary {
            background: white;
            color: #667eea;
            border: none;
            padding: 10px 24px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
        }
        
        .btn-navbar-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 255, 255, 0.3);
            color: #764ba2;
        }
        
        .btn-navbar-outline {
            color: white !important;
            border: 2px solid rgba(255, 255, 255, 0.5);
            padding: 8px 20px !important;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-navbar-outline:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: white;
        }
        
        /* Mobile Responsive */
        @@media (max-width: 991px) {
            .navbar-search {
                max-width: 100%;
                margin: 10px 0;
            }
            
            .nav-link {
                margin: 2px 0;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark modern-navbar">
            <div class="container-fluid px-4">
                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon">
                        <i class="fas fa-handshake"></i>
                    </div>
                    SGP
                </a>
                
                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Search Bar (Desktop) -->
                    <div class="navbar-search d-none d-lg-block">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="form-control" placeholder="Search projects, freelancers...">
                    </div>
                    
                    <!-- Main Navigation -->
                    <ul class="navbar-nav me-auto ms-lg-4">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-chart-line me-2"></i>Dashboard
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Index">
                                <i class="fas fa-briefcase me-2"></i>Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Create">
                                <i class="fas fa-plus-circle me-2"></i>Post Job
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Right Side Navigation -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav align-items-lg-center">
                            <!-- Messages with Badge -->
                            <li class="nav-item nav-notification">
                                <a class="nav-link" asp-area="" asp-controller="Message" asp-action="Index">
                                    <i class="fas fa-envelope"></i>
                                    <span class="notification-badge">3</span>
                                </a>
                            </li>
                            
                            <!-- Notifications -->
                            <li class="nav-item nav-notification">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-bell"></i>
                                    <span class="notification-badge">5</span>
                                </a>
                            </li>
                            
                            <!-- User Dropdown -->
                            <li class="nav-item dropdown ms-lg-2">
                                <a class="nav-link dropdown-toggle user-dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                    <span class="d-none d-lg-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i>My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Project" asp-action="MyProjects">
                                            <i class="fas fa-folder-open me-2"></i>My Projects
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Earnings" asp-action="Index">
                                            <i class="fas fa-wallet me-2"></i>Earnings
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Settings" asp-action="Index">
                                            <i class="fas fa-cog me-2"></i>Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav align-items-lg-center">
                            <li class="nav-item me-2">
                                <a class="nav-link btn-navbar-outline" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-navbar-primary" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>Sign Up
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3"><i class="fas fa-handshake me-2"></i>SGP Freelancing</h5>
                    <p class="text-white-50">Connect with top freelancers and find exciting projects worldwide. Your success is our mission.</p>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="mb-3 fw-bold">Company</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">About Us</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Careers</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Press</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="mb-3 fw-bold">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Help Center</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none hover-link">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Terms of Service</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3 fw-bold">Connect With Us</h6>
                    <div class="d-flex gap-3 mb-3">
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-facebook-f"></i>
                            </div>
                        </a>
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-twitter"></i>
                            </div>
                        </a>
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-linkedin-in"></i>
                            </div>
                        </a>
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-instagram"></i>
                            </div>
                        </a>
                    </div>
                    <p class="text-white-50 small">Subscribe to our newsletter for updates</p>
                </div>
            </div>
            <hr class="bg-white opacity-25 mb-3">
            <div class="text-center text-white-50">
                <p class="mb-0">&copy; 2026 SGP Freelancing Platform. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
    <style>
        .hover-link:hover {
            color: white !important;
            padding-left: 5px;
            transition: all 0.3s ease;
        }
        
        .social-icon {
            text-decoration: none;
            transition: transform 0.3s ease;
        }
        
        .social-icon:hover {
            transform: translateY(-3px);
        }
        
        .social-icon-circle {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            transition: all 0.3s ease;
        }
        
        .social-icon:hover .social-icon-circle {
            box-shadow: 0 8px 20px rgba(139, 123, 230, 0.4);
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    
    @if (TempData["Success"] != null)
    {
        <div data-temp-success="@TempData["Success"]"></div>
    }
    @if (TempData["Error"] != null)
    {
        <div data-temp-error="@TempData["Error"]"></div>
    }
    @if (TempData["Warning"] != null)
    {
        <div data-temp-warning="@TempData["Warning"]"></div>
    }
    @if (TempData["Info"] != null)
    {
        <div data-temp-info="@TempData["Info"]"></div>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
