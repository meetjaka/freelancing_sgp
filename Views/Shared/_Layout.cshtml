<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGP Freelancing Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    <style>
        body { font-family: 'Inter', sans-serif !important; }
        .navbar-gradient { 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-handshake me-2"></i>SGP Freelancing
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-th-large me-1"></i>Dashboard
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Index">
                                <i class="fas fa-briefcase me-1"></i>Browse Projects
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Create">
                                <i class="fas fa-plus-circle me-1"></i>Post Project
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Message" asp-action="Index">
                                <i class="fas fa-envelope me-1"></i>Messages
                            </a>
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user me-2"></i>Profile
                                    </a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Project" asp-action="MyProjects">
                                        <i class="fas fa-folder me-2"></i>My Projects
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light text-primary ms-2" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Sign Up
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3"><i class="fas fa-handshake me-2"></i>SGP Freelancing</h5>
                    <p class="text-white-50">Connect with top freelancers and find exciting projects worldwide. Your success is our mission.</p>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="mb-3 fw-bold">Company</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">About Us</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Careers</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Press</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="mb-3 fw-bold">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Help Center</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none hover-link">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Terms of Service</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none hover-link">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3 fw-bold">Connect With Us</h6>
                    <div class="d-flex gap-3 mb-3">
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-facebook-f"></i>
                            </div>
                        </a>
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-twitter"></i>
                            </div>
                        </a>
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-linkedin-in"></i>
                            </div>
                        </a>
                        <a href="#" class="social-icon">
                            <div class="social-icon-circle">
                                <i class="fab fa-instagram"></i>
                            </div>
                        </a>
                    </div>
                    <p class="text-white-50 small">Subscribe to our newsletter for updates</p>
                </div>
            </div>
            <hr class="bg-white opacity-25 mb-3">
            <div class="text-center text-white-50">
                <p class="mb-0">&copy; 2026 SGP Freelancing Platform. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
    <style>
        .hover-link:hover {
            color: white !important;
            padding-left: 5px;
            transition: all 0.3s ease;
        }
        
        .social-icon {
            text-decoration: none;
            transition: transform 0.3s ease;
        }
        
        .social-icon:hover {
            transform: translateY(-3px);
        }
        
        .social-icon-circle {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            transition: all 0.3s ease;
        }
        
        .social-icon:hover .social-icon-circle {
            box-shadow: 0 8px 20px rgba(139, 123, 230, 0.4);
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    
    @if (TempData["Success"] != null)
    {
        <div data-temp-success="@TempData["Success"]"></div>
    }
    @if (TempData["Error"] != null)
    {
        <div data-temp-error="@TempData["Error"]"></div>
    }
    @if (TempData["Warning"] != null)
    {
        <div data-temp-warning="@TempData["Warning"]"></div>
    }
    @if (TempData["Info"] != null)
    {
        <div data-temp-info="@TempData["Info"]"></div>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
