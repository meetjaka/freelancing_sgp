                            <i class="fas fa-moon text-lg theme-icon-dark hidden"></i>
                            <div class="absolute -bottom-12 right-0 bg-slate-900 dark:bg-white text-white dark:text-slate-900 px-3 py-1.5 rounded-lg text-xs font-medium opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap">
                                <span class="theme-tooltip-light">Switch to dark mode</span>
                                <span class="theme-tooltip-dark hidden">Switch to light mode</span>
                            </div>
                        </button>
                        <a class="nav-link px-3 py-2 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-all duration-300" href="#">Explore</a>
                        <a class="nav-link px-3 py-2 rounded-lg hover:bg-slate-100 hover:text-indigo-600 transition-all duration-300" href="#">Become a Seller</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="relative w-10 h-10 flex items-center justify-center rounded-full hover:bg-slate-100 text-slate-600 hover:text-indigo-600 transition-colors" 
                               asp-area="" asp-controller="Message" asp-action="Index">
