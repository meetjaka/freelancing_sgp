@{
    ViewData["Title"] = "Tailwind Test";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 p-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-slate-900 mb-8 text-center">Tailwind CSS Test Page</h1>
        
        <!-- Test Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6 hover:shadow-lg transition-all">
                <div class="w-12 h-12 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-xl flex items-center justify-center mb-4">
                    <i class="fas fa-check text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">Card Component</h3>
                <p class="text-slate-600">This card uses Tailwind's custom component classes.</p>
            </div>
            
            <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-all">
                <div class="w-12 h-12 bg-emerald-500 rounded-full flex items-center justify-center mb-4">
                    <i class="fas fa-star text-white"></i>
                </div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">Utility Classes</h3>
                <p class="text-slate-600">This card uses pure Tailwind utility classes.</p>
            </div>
            
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-6 text-white">
                <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mb-4">
                    <i class="fas fa-rocket text-white"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Gradient Card</h3>
                <p class="text-white/90">Testing gradient backgrounds and opacity.</p>
            </div>
        </div>
        
        <!-- Test Buttons -->
        <div class="flex flex-wrap gap-4 justify-center mb-8">
            <button class="inline-flex items-center justify-center px-6 py-3 font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all">
                <i class="fas fa-plus mr-2"></i>Primary Button
            </button>
            <button class="px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white font-semibold rounded-lg transition-all">
                Secondary Button
            </button>
            <button class="px-6 py-3 border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-600 hover:text-white font-semibold rounded-lg transition-all">
                Outline Button
            </button>
        </div>
        
        <!-- Test Form -->
        <div class="bg-white rounded-xl shadow-md p-8 mb-8">
            <h2 class="text-2xl font-bold text-slate-900 mb-6">Form Elements Test</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Input Field</label>
                    <input type="text" placeholder="Enter text..." class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Select Field</label>
                    <select class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <option>Choose option...</option>
                        <option>Option 1</option>
                        <option>Option 2</option>
                    </select>
                </div>
            </div>
        </div>
        
        <!-- Test Badges -->
        <div class="flex flex-wrap gap-3 justify-center mb-8">
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-emerald-100 text-emerald-700">Success</span>
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-amber-100 text-amber-700">Warning</span>
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-700">Danger</span>
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-700">Info</span>
        </div>
        
        <!-- Test Responsive Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <div class="bg-indigo-100 p-4 rounded-lg text-center">
                <div class="text-2xl font-bold text-indigo-600">1</div>
            </div>
            <div class="bg-purple-100 p-4 rounded-lg text-center">
                <div class="text-2xl font-bold text-purple-600">2</div>
            </div>
            <div class="bg-blue-100 p-4 rounded-lg text-center">
                <div class="text-2xl font-bold text-blue-600">3</div>
            </div>
            <div class="bg-green-100 p-4 rounded-lg text-center">
                <div class="text-2xl font-bold text-green-600">4</div>
            </div>
            <div class="bg-yellow-100 p-4 rounded-lg text-center">
                <div class="text-2xl font-bold text-yellow-600">5</div>
            </div>
            <div class="bg-red-100 p-4 rounded-lg text-center">
                <div class="text-2xl font-bold text-red-600">6</div>
            </div>
        </div>
    </div>
</div>