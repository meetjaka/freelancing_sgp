@{
    ViewData["Title"] = "Earnings";
}

<div class="max-w-7xl mx-auto px-4 py-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
        <div>
            <h2 class="text-3xl font-bold text-slate-900">Earnings</h2>
            <p class="text-slate-500 mt-1">Track your income and transactions</p>
        </div>
        <button class="inline-flex items-center justify-center px-5 py-2.5 font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all">
            <i class="fas fa-download mr-2"></i>Download Report
        </button>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Earnings Card -->
        <div class="rounded-xl shadow-md bg-gradient-to-br from-indigo-600 to-purple-700 p-6">
            <div class="flex justify-between items-center mb-4">
                <h6 class="text-white/70 text-sm font-medium">Total Earnings</h6>
                <i class="fas fa-wallet text-white/80 text-xl"></i>
            </div>
            <h2 class="text-3xl font-bold text-white mb-1">$12,450.00</h2>
            <p class="text-white/60 text-sm">Lifetime earnings</p>
        </div>

        <!-- This Month Card -->
        <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h6 class="text-slate-500 text-sm font-medium">This Month</h6>
                <i class="fas fa-calendar-check text-emerald-500 text-xl"></i>
            </div>
            <h2 class="text-3xl font-bold text-emerald-500 mb-1">$2,340.00</h2>
            <p class="text-slate-500 text-sm">
                <i class="fas fa-arrow-up text-emerald-500 mr-1"></i>18% from last month
            </p>
        </div>

        <!-- Pending Card -->
        <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h6 class="text-slate-500 text-sm font-medium">Pending</h6>
                <i class="fas fa-hourglass-half text-amber-500 text-xl"></i>
            </div>
            <h2 class="text-3xl font-bold text-amber-500 mb-1">$890.00</h2>
            <p class="text-slate-500 text-sm">In escrow / processing</p>
        </div>
    </div>

    <!-- Earnings Chart -->
    <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6 mb-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
            <h5 class="text-xl font-bold text-slate-900">Earnings Overview</h5>
            <div class="flex rounded-lg overflow-hidden border border-slate-200">
                <button class="px-4 py-2 text-sm font-semibold bg-indigo-600 text-white">6M</button>
                <button class="px-4 py-2 text-sm font-semibold text-slate-600 hover:bg-slate-50 border-l border-slate-200">1Y</button>
                <button class="px-4 py-2 text-sm font-semibold text-slate-600 hover:bg-slate-50 border-l border-slate-200">All</button>
            </div>
        </div>
        <div class="text-center py-16">
            <div class="w-20 h-20 mx-auto bg-indigo-100 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-chart-line text-indigo-600 text-3xl"></i>
            </div>
            <p class="text-slate-600 text-lg mb-2">Earnings chart visualization</p>
            <p class="text-slate-400 text-sm">Monthly earnings breakdown with trend analysis</p>
        </div>
    </div>

    <!-- Transaction History -->
