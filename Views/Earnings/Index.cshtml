@model SGP_Freelancing.Models.ViewModels.EarningsViewModel
@{
    ViewData["Title"] = "Earnings";
}

<!-- Page Header -->
<div class="mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-1">@(Model.IsClient ? "Spending" : "Earnings")</h1>
            <p class="text-slate-600 dark:text-slate-400">Track your @(Model.IsClient ? "spending" : "income") and transactions</p>
        </div>
        <button class="inline-flex items-center gap-2 px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Download Report
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-8">
    <!-- Total Earnings -->
    <div class="bg-indigo-600 rounded-xl p-6 text-white">
        <div class="flex items-start justify-between mb-4">
            <div>
                <p class="text-white/70 text-sm font-medium mb-1">Total @(Model.IsClient ? "Spent" : "Earnings")</p>
                <p class="text-3xl font-bold">$@Model.TotalEarnings.ToString("N2")</p>
            </div>
            <div class="p-3 bg-white/10 rounded-lg">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
        <p class="text-white/60 text-sm">Lifetime @(Model.IsClient ? "spending" : "earnings")</p>
    </div>

    <!-- This Month -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <div class="flex items-start justify-between mb-4">
            <div>
                <p class="text-slate-600 dark:text-slate-400 text-sm font-medium mb-1">This Month</p>
                <p class="text-3xl font-bold text-slate-900 dark:text-white">$@Model.ThisMonthEarnings.ToString("N2")</p>
            </div>
            <div class="p-3 bg-emerald-50 dark:bg-emerald-900/20 rounded-lg">
                <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
            </div>
        </div>
        <p class="text-sm flex items-center gap-1 @(Model.PercentageChange >= 0 ? "text-slate-600 dark:text-slate-400" : "text-amber-600 dark:text-amber-400")">
            @if (Model.PercentageChange >= 0)
            {
                <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                </svg>
                <span>@Model.PercentageChange.ToString("0.0")% from last month</span>
            }
            else
            {
                <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                </svg>
                <span>@(Math.Abs(Model.PercentageChange).ToString("0.0"))% from last month</span>
            }
        </p>
    </div>

    <!-- Pending -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6">
        <div class="flex items-start justify-between mb-4">
            <div>
                <p class="text-slate-600 dark:text-slate-400 text-sm font-medium mb-1">Pending</p>
                <p class="text-3xl font-bold text-slate-900 dark:text-white">$@Model.PendingEarnings.ToString("N2")</p>
            </div>
            <div class="p-3 bg-amber-50 dark:bg-amber-900/20 rounded-lg">
                <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400">In escrow / processing</p>
    </div>
</div>

<!-- Earnings Chart -->
<div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6 mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
        <h3 class="text-lg font-bold text-slate-900 dark:text-white">@(Model.IsClient ? "Spending" : "Earnings") Overview</h3>
        <div class="flex gap-2">
            <button class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg">6M</button>
        </div>
    </div>
    <div class="w-full h-[300px]">
        <canvas id="earningsChart"></canvas>
    </div>
</div>

<!-- Transaction History -->
<div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-bold text-slate-900 dark:text-white">Recent Transactions</h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-slate-50 dark:bg-slate-900/50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-400 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-400 uppercase">Project</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-400 uppercase">@(Model.IsClient ? "Freelancer" : "Client")</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-400 uppercase">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-400 uppercase">Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                @if (Model.RecentTransactions.Any())
                {
                    foreach (var tx in Model.RecentTransactions)
                    {
                        <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                            <td class="px-6 py-4">
                                <span class="text-sm text-slate-500">@tx.Date.ToString("MMM d, yyyy")</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm font-medium text-slate-900 dark:text-white">@tx.ProjectTitle</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm text-slate-600 dark:text-slate-400">@tx.OtherPartyName</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold @(tx.IsCredit ? "text-emerald-600 dark:text-emerald-400" : "text-slate-900 dark:text-white")">
                                    @(tx.IsCredit ? "+" : "")$@tx.Amount.ToString("N2")
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @if (tx.Status == "Completed")
                                {
                                    <span class="inline-flex items-center px-2.5 py-1 bg-emerald-50 dark:bg-emerald-900/20 text-emerald-700 dark:text-emerald-400 text-xs font-medium rounded-full">Completed</span>
                                }
                                else if (tx.Status == "Pending" || tx.Status == "Processing")
                                {
                                    <span class="inline-flex items-center px-2.5 py-1 bg-amber-50 dark:bg-amber-900/20 text-amber-700 dark:text-amber-400 text-xs font-medium rounded-full">@tx.Status</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-1 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-xs font-medium rounded-full">@tx.Status</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-slate-500 dark:text-slate-400">
                            No recent transactions found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var ctx = document.getElementById('earningsChart').getContext('2d');
            var isClient = @(Model.IsClient.ToString().ToLower());
            
            var chartLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyLabels));
            var chartData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyData));

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        label: isClient ? 'Spending ($)' : 'Earnings ($)',
                        data: chartData,
                        backgroundColor: '#4F46E5', // indigo-600
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(168, 162, 158, 0.1)'
                            },
                            ticks: {
                                callback: function(value, index, values) {
                                    return '$' + value;
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });
    </script>
}
