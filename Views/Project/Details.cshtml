@model SGP_Freelancing.Models.ViewModels.ProjectDetailsViewModel
@{
    ViewData["Title"] = Model.Project.Title;
}

<!-- Breadcrumb Header -->
<div class="bg-gradient-to-br from-indigo-600 to-purple-700 py-12 mb-10">
    <div class="max-w-7xl mx-auto px-4">
        <nav class="flex items-center space-x-2 text-white/80 text-sm mb-4">
            <a asp-controller="Home" asp-action="Index" class="hover:text-white transition-colors">Home</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <a asp-controller="Project" asp-action="Index" class="hover:text-white transition-colors">Projects</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <span class="text-white font-medium">@Model.Project.Title</span>
        </nav>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4 pb-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <!-- Project Details Card -->
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-8 mb-8">
                <div class="flex flex-wrap justify-between items-start gap-4 mb-6">
                    <div class="flex flex-wrap gap-3">
                        <span class="px-4 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-semibold rounded-full">@Model.Project.CategoryName</span>
                        <span class="px-4 py-2 bg-emerald-500 text-white text-sm font-semibold rounded-full">@Model.Project.Status</span>
                    </div>
                    @if (Model.IsOwner)
                    {
                        <div class="relative" x-data="{ open: false }">
                            <button onclick="this.nextElementSibling.classList.toggle('hidden')" class="px-4 py-2 border-2 border-slate-200 text-slate-600 rounded-lg hover:border-indigo-500 hover:text-indigo-600 transition-colors">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-xl border border-slate-100 py-2 z-10">
                                <a asp-action="Edit" asp-route-id="@Model.Project.Id" class="block px-4 py-2 text-slate-700 hover:bg-slate-50 transition-colors">
                                    <i class="fas fa-edit mr-2 text-indigo-600"></i>Edit Project
                                </a>
                                <hr class="my-2 border-slate-100">
                                <form asp-action="Delete" asp-route-id="@Model.Project.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this project?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="w-full text-left px-4 py-2 text-red-600 hover:bg-red-50 transition-colors">
                                        <i class="fas fa-trash mr-2"></i>Delete Project
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
                
                <h1 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-6 leading-tight">@Model.Project.Title</h1>
                
                <div class="flex flex-wrap gap-6 mb-6 text-slate-600">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-user-circle text-indigo-600"></i>
                        <span>Posted by <strong class="text-slate-900">@Model.Project.ClientName</strong></span>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="fas fa-calendar-alt text-indigo-600"></i>
                        <span>@Model.Project.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                    @if (Model.Project.Deadline.HasValue)
                    {
                        <div class="flex items-center gap-2">
                            <i class="fas fa-clock text-indigo-600"></i>
                            <span>Deadline: <strong class="text-slate-900">@Model.Project.Deadline.Value.ToString("MMM dd, yyyy")</strong></span>
                        </div>
                    }
                    <div class="flex items-center gap-2">
                        <i class="fas fa-users text-indigo-600"></i>
                        <span><strong class="text-slate-900">@Model.Project.BidsCount</strong> bids received</span>
                    </div>
                </div>
                
                <div class="mb-8">
                    <div class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">$@Model.Project.Budget.ToString("N0")</div>
                    <div class="text-slate-500 mt-1">Project Budget</div>
                </div>
                
                <h3 class="text-2xl font-bold text-slate-900 mb-4">Project Description</h3>
                <p class="text-slate-600 leading-relaxed mb-8">@Model.Project.Description</p>
                
                @if (Model.Project.Skills.Any())
                {
                    <h3 class="text-2xl font-bold text-slate-900 mb-4">Required Skills</h3>
                    <div class="flex flex-wrap gap-3">
                        @foreach (var skill in Model.Project.Skills)
                        {
                            <span class="px-5 py-2 bg-slate-100 text-slate-700 text-sm font-semibold rounded-full">@skill</span>
                        }
                    </div>
                }
            </div>

            <!-- Bids Section -->
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6 mb-6">
                <div class="flex justify-between items-center">
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.Project.BidsCount Freelancers Bid</div>
                        <div class="text-slate-500">Review proposals and choose the best fit</div>
                    </div>
                </div>
            </div>

            @if (Model.Bids.Any())
            {
                @foreach (var bid in Model.Bids)
                {
                    <div class="bg-white rounded-xl border border-slate-100 p-7 mb-5 transition-all hover:border-indigo-300 hover:shadow-lg">
                        <div class="flex flex-wrap justify-between items-start gap-4 mb-4">
                            <div class="flex items-center gap-4">
                                <div class="w-14 h-14 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                                    @bid.FreelancerName.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <div class="text-xl font-bold text-slate-900">@bid.FreelancerName</div>
                                    <div class="flex items-center gap-1 text-amber-500 text-sm">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <span class="ml-1 text-slate-600">4.8</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex flex-wrap gap-6 items-center mb-4 p-4 bg-slate-50 rounded-xl">
                            <div>
                                <div class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">$@bid.ProposedAmount.ToString("N0")</div>
                                <div class="text-sm text-slate-500">Proposed Amount</div>
                            </div>
                            <div class="text-slate-600">
                                <i class="fas fa-clock mr-1 text-indigo-600"></i>
                                Delivery in <strong class="text-slate-900">@bid.EstimatedDurationDays days</strong>
                            </div>
                        </div>

                        <div class="text-slate-600 mb-4">
                            <strong class="text-slate-900">Cover Letter:</strong><br>
                            @bid.CoverLetter
                        </div>

                        <div class="flex flex-wrap justify-between items-center gap-4 pt-4 border-t border-slate-100">
                            <div class="text-slate-400 text-sm">
                                <i class="fas fa-calendar mr-1"></i>
                                Submitted @bid.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                            @if (Model.IsOwner && bid.Status == "Pending")
                            {
                                <form asp-action="AcceptBid" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bidId" value="@bid.Id" />
                                    <input type="hidden" name="projectId" value="@Model.Project.Id" />
                                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-emerald-500 to-emerald-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all">
                                        <i class="fas fa-check-circle mr-2"></i>Accept Bid
                                    </button>
                                </form>
                            }
                            else if (bid.Status == "Accepted")
                            {
                                <span class="px-4 py-2 bg-emerald-500 text-white text-sm font-semibold rounded-full">
                                    <i class="fas fa-check-circle mr-1"></i>Accepted
                                </span>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="bg-white rounded-xl border border-slate-100 shadow-md p-16 text-center">
                    <div class="text-6xl text-slate-200 mb-4">
                        <i class="fas fa-inbox"></i>
                    </div>
                    <div class="text-lg text-slate-500">
                        No bids yet. Be the first to submit a proposal!
                    </div>
                </div>
            }
        </div>

        <div class="lg:col-span-1">
            @if (Model.CanBid && User.IsInRole("Freelancer"))
            {
                <!-- Submit Bid Form -->
                <div class="bg-white rounded-xl border border-slate-100 shadow-md p-8 sticky top-24">
                    <h3 class="text-xl font-bold text-slate-900 mb-6 flex items-center gap-2">
                        <i class="fas fa-paper-plane text-indigo-600"></i>
                        Submit Your Proposal
                    </h3>
                    <form asp-action="SubmitBid" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ProjectId" value="@Model.Project.Id" />
                        
                        <div class="mb-5">
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Your Bid Amount *</label>
                            <div class="flex">
                                <span class="px-4 py-3 bg-slate-50 border-2 border-r-0 border-slate-200 rounded-l-xl font-semibold text-slate-600">$</span>
                                <input type="number" step="0.01" class="flex-1 px-4 py-3 border-2 border-l-0 border-slate-200 rounded-r-xl focus:outline-none focus:border-indigo-500 transition-colors" name="ProposedAmount" required placeholder="2500" />
                            </div>
                            <p class="text-sm text-slate-500 mt-1">Project budget: $@Model.Project.Budget.ToString("N0")</p>
                        </div>
                        
                        <div class="mb-5">
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Estimated Duration *</label>
                            <div class="flex">
                                <input type="number" class="flex-1 px-4 py-3 border-2 border-r-0 border-slate-200 rounded-l-xl focus:outline-none focus:border-indigo-500 transition-colors" name="EstimatedDurationDays" required placeholder="14" />
                                <span class="px-4 py-3 bg-slate-50 border-2 border-l-0 border-slate-200 rounded-r-xl font-semibold text-slate-600">days</span>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Cover Letter *</label>
                            <textarea class="w-full px-4 py-3 border-2 border-slate-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors resize-none" name="CoverLetter" rows="6" required placeholder="Explain why you're the perfect fit for this project. Highlight your relevant experience and skills..."></textarea>
                        </div>
                        
                        <button type="submit" class="w-full py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all">
                            <i class="fas fa-paper-plane mr-2"></i>Submit Proposal
                        </button>

                        <p class="text-center mt-4 text-sm text-slate-500">
                            <i class="fas fa-shield-alt mr-1"></i>
                            Your proposal is secure and private
                        </p>
                    </form>
                </div>
            }
            else if (!User.Identity!.IsAuthenticated)
            {
                <div class="bg-white rounded-xl border border-slate-100 shadow-md p-8 text-center sticky top-24">
                    <div class="text-6xl text-slate-200 mb-4">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h4 class="text-xl font-bold text-slate-900 mb-3">Login Required</h4>
                    <p class="text-slate-500 mb-6">You need to be logged in as a freelancer to submit a bid on this project.</p>
                    <a href="/Account/Login" class="block w-full py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl text-center hover:shadow-lg hover:-translate-y-0.5 transition-all">
                        <i class="fas fa-sign-in-alt mr-2"></i>Login to Bid
                    </a>
                </div>
            }
            else
            {
                <!-- Project Summary for Owner/Others -->
                <div class="bg-gradient-to-br from-indigo-600 to-purple-700 text-white rounded-2xl p-7 mb-6 sticky top-24">
                    <h4 class="text-lg font-bold mb-6">Project Summary</h4>
                    <div class="space-y-4">
                        <div class="py-4 border-b border-white/20">
                            <div class="text-white/70 text-sm mb-1">Budget</div>
                            <div class="text-xl font-bold">$@Model.Project.Budget.ToString("N0")</div>
                        </div>
                        @if (Model.Project.Deadline.HasValue)
                        {
                            <div class="py-4 border-b border-white/20">
                                <div class="text-white/70 text-sm mb-1">Deadline</div>
                                <div class="text-xl font-bold">@Model.Project.Deadline.Value.ToString("MMM dd, yyyy")</div>
                            </div>
                        }
                        <div class="py-4 border-b border-white/20">
                            <div class="text-white/70 text-sm mb-1">Posted Date</div>
                            <div class="text-xl font-bold">@Model.Project.CreatedAt.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="py-4 border-b border-white/20">
                            <div class="text-white/70 text-sm mb-1">Total Bids</div>
                            <div class="text-xl font-bold">@Model.Project.BidsCount</div>
                        </div>
                        <div class="py-4">
                            <div class="text-white/70 text-sm mb-1">Project Status</div>
                            <div class="text-xl font-bold">@Model.Project.Status</div>
                        </div>
                    </div>
                </div>

                @if (Model.IsOwner)
                {
                    <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
                        <h4 class="text-lg font-bold text-slate-900 mb-3">Client Dashboard</h4>
                        <p class="text-slate-500 mb-4">You're viewing your own project. Review bids and select the best freelancer.</p>
                        <a asp-action="Edit" asp-route-id="@Model.Project.Id" class="block w-full py-3 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-bold rounded-xl text-center hover:shadow-lg hover:-translate-y-0.5 transition-all">
                            <i class="fas fa-edit mr-2"></i>Edit Project
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>
