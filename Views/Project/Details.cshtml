@model SGP_Freelancing.Models.ViewModels.ProjectDetailsViewModel
@{
    ViewData["Title"] = Model.Project.Title;
}

<!-- Page Header -->
<div class="bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 py-8 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex mb-4 text-sm text-slate-500 dark:text-slate-400">
            <a asp-controller="Home" asp-action="Index" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">Home</a>
            <span class="mx-2 text-slate-300 dark:text-slate-600">/</span>
            <a asp-controller="Project" asp-action="Index" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">Projects</a>
            <span class="mx-2 text-slate-300 dark:text-slate-600">/</span>
            <span class="text-slate-900 dark:text-white font-medium truncate max-w-xs">@Model.Project.Title</span>
        </nav>
        
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
            <div class="flex-1">
                <div class="flex flex-wrap items-center gap-3 mb-3">
                    <h1 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">@Model.Project.Title</h1>
                    @if (Model.Project.Status == "Open")
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400 border border-emerald-200 dark:border-emerald-800">
                            Open for Bids
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800 dark:bg-slate-800 dark:text-slate-400 border border-slate-200 dark:border-slate-700">
                            @Model.Project.Status
                        </span>
                    }
                </div>
                
                <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-slate-500 dark:text-slate-400">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-folder text-indigo-500 dark:text-indigo-400"></i>
                        <span>@Model.Project.CategoryName</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="fas fa-clock text-indigo-500 dark:text-indigo-400"></i>
                        <span>Posted @Model.Project.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="fas fa-user-circle text-indigo-500 dark:text-indigo-400"></i>
                        <span>Client: <span class="font-medium text-slate-900 dark:text-white">@Model.Project.ClientName</span></span>
                    </div>
                </div>
            </div>

            @if (Model.IsOwner)
            {
                <div class="flex items-center gap-3">
                    <a asp-action="Edit" asp-route-id="@Model.Project.Id" class="inline-flex items-center px-4 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-lg font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors shadow-sm">
                        <i class="fas fa-edit mr-2 text-indigo-500"></i> Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Project.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this project?')" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-white dark:bg-slate-800 border border-red-200 dark:border-red-900/50 rounded-lg font-medium text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors shadow-sm">
                            <i class="fas fa-trash-alt mr-2"></i> Delete
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

<div class="bg-slate-50 dark:bg-[#0B1120] min-h-screen py-8 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column: Project Details & Bids -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Key Stats Grid -->
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                    <div class="bg-white dark:bg-slate-800 p-5 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow">
                        <div class="text-sm text-slate-500 dark:text-slate-400 mb-1">Budget</div>
                        <div class="text-2xl font-bold text-slate-900 dark:text-white">$@Model.Project.Budget.ToString("N0")</div>
                        <div class="text-xs text-emerald-600 dark:text-emerald-400 mt-1 font-medium">Fixed Price</div>
                    </div>
                    <div class="bg-white dark:bg-slate-800 p-5 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow">
                        <div class="text-sm text-slate-500 dark:text-slate-400 mb-1">Deadline</div>
                        @if (Model.Project.Deadline.HasValue)
                        {
                            <div class="text-xl font-bold text-slate-900 dark:text-white">@Model.Project.Deadline.Value.ToString("MMM dd")</div>
                            <div class="text-xs text-slate-500 dark:text-slate-500 mt-1">@((Model.Project.Deadline.Value - DateTime.Now).Days) days left</div>
                        }
                        else
                        {
                            <div class="text-xl font-bold text-slate-900 dark:text-white">Flexible</div>
                        }
                    </div>
                    <div class="bg-white dark:bg-slate-800 p-5 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow">
                        <div class="text-sm text-slate-500 dark:text-slate-400 mb-1">Proposals</div>
                        <div class="text-2xl font-bold text-slate-900 dark:text-white">@Model.Project.BidsCount</div>
                        <div class="text-xs text-blue-600 dark:text-blue-400 mt-1 font-medium">Active Candidates</div>
                    </div>
                </div>

                <!-- Description & Skills -->
                <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 shadow-sm overflow-hidden">
                    <div class="p-6 sm:p-8">
                        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Project Description</h3>
                        <div class="prose dark:prose-invert max-w-none text-slate-600 dark:text-slate-300 leading-relaxed">
                            @Html.Raw(Model.Project.Description.Replace(Environment.NewLine, "<br />"))
                        </div>

                        @if (Model.Project.Skills.Any())
                        {
                            <div class="mt-8 pt-8 border-t border-slate-100 dark:border-slate-700">
                                <h4 class="text-sm font-semibold text-slate-900 dark:text-white uppercase tracking-wider mb-4">Required Skills</h4>
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var skill in Model.Project.Skills)
                                    {
                                        <span class="px-3 py-1.5 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-700 dark:text-indigo-300 text-sm font-medium rounded-lg border border-indigo-100 dark:border-indigo-800/50">
                                            @skill
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Bids / Proposals Section -->
                <div>
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white">Proposals (@Model.Project.BidsCount)</h3>
                        <div class="flex gap-2">
                            <!-- Sort/Filter controls could go here -->
                        </div>
                    </div>

                    @if (Model.Bids.Any())
                    {
                        <div class="space-y-4">
                            @foreach (var bid in Model.Bids)
                            {
                                <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6 shadow-sm hover:shadow-md transition-all duration-300 group">
                                    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
                                        <div class="flex items-center gap-4">
                                            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white text-lg font-bold shadow-sm">
                                                @bid.FreelancerName.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <h4 class="text-lg font-bold text-slate-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">@bid.FreelancerName</h4>
                                                <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
                                                    <div class="flex text-amber-400 text-xs">
                                                        <i class="fas fa-star"></i>
                                                        <i class="fas fa-star"></i>
                                                        <i class="fas fa-star"></i>
                                                        <i class="fas fa-star"></i>
                                                        <i class="fas fa-star"></i>
                                                    </div>
                                                    <span>5.0 (12 jobs)</span> <!-- Placeholder for actual rating if available -->
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-4 text-right">
                                            <div>
                                                <div class="text-xl font-bold text-slate-900 dark:text-white">$@bid.ProposedAmount.ToString("N0")</div>
                                                <div class="text-xs text-slate-500 dark:text-slate-400">Proposed Bid</div>
                                            </div>
                                            <div class="h-8 w-px bg-slate-200 dark:bg-slate-700 mx-2 hidden md:block"></div>
                                            <div>
                                                <div class="text-lg font-semibold text-slate-700 dark:text-slate-300">@bid.EstimatedDurationDays <span class="text-sm font-normal text-slate-500">days</span></div>
                                                <div class="text-xs text-slate-500 dark:text-slate-400">Delivery</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="bg-slate-50 dark:bg-slate-900/50 rounded-lg p-4 mb-4">
                                        <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed line-clamp-3 hover:line-clamp-none transition-all">
                                            @bid.CoverLetter
                                        </p>
                                    </div>

                                    <div class="flex items-center justify-between pt-2">
                                        <div class="text-xs text-slate-400 dark:text-slate-500">
                                            Submitted @bid.CreatedAt.ToString("MMM dd, yyyy")
                                        </div>
                                        
                                        @if (Model.IsOwner && bid.Status == "Pending")
                                        {
                                            <form asp-action="AcceptBid" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="bidId" value="@bid.Id" />
                                                <input type="hidden" name="projectId" value="@Model.Project.Id" />
                                                <button type="submit" class="px-5 py-2 bg-slate-900 dark:bg-white text-white dark:text-slate-900 text-sm font-semibold rounded-lg hover:bg-indigo-600 dark:hover:bg-indigo-100 transition-colors shadow-sm">
                                                    Accept Proposal
                                                </button>
                                            </form>
                                        }
                                        else if (bid.Status == "Accepted")
                                        {
                                            <span class="px-3 py-1 bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400 text-xs font-semibold rounded-full border border-emerald-200 dark:border-emerald-800">
                                                <i class="fas fa-check-circle mr-1"></i> Accepted
                                            </span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 border-dashed p-12 text-center">
                            <div class="w-16 h-16 bg-slate-100 dark:bg-slate-700 text-slate-400 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl">
                                <i class="fas fa-inbox"></i>
                            </div>
                            <h3 class="text-lg font-medium text-slate-900 dark:text-white mb-1">No proposals yet</h3>
                            <p class="text-slate-500 dark:text-slate-400">Be the first freelancer to bid on this project!</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Right Column: Sidebar Actions -->
            <div class="lg:col-span-1">
                @if (Model.CanBid && User.IsInRole("Freelancer"))
                {
                    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg border border-indigo-100 dark:border-indigo-900/30 p-6 sticky top-8">
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Submit Proposal</h3>
                        
                        <form asp-action="SubmitBid" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ProjectId" value="@Model.Project.Id" />
                            
                            <div class="space-y-5">
                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Bid Amount</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="text-slate-500 font-semibold">$</span>
                                        </div>
                                        <input type="number" step="0.01" name="ProposedAmount" required placeholder="@Model.Project.Budget" 
                                               class="w-full pl-8 pr-4 py-3 bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:focus:ring-indigo-400 dark:text-white transition-all font-medium" />
                                    </div>
                                    <p class="text-xs text-slate-500 mt-1.5 flex justify-between">
                                        <span>Client's Budget:</span>
                                        <span class="font-medium text-slate-700 dark:text-slate-300">$@Model.Project.Budget.ToString("N0")</span>
                                    </p>
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Delivery Time</label>
                                    <div class="relative">
                                        <input type="number" name="EstimatedDurationDays" required placeholder="7" 
                                               class="w-full pl-4 pr-12 py-3 bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:focus:ring-indigo-400 dark:text-white transition-all font-medium" />
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <span class="text-slate-500 font-medium text-sm">Days</span>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Cover Letter</label>
                                    <textarea name="CoverLetter" rows="5" required placeholder="Describe why you are the best fit..."
                                              class="w-full p-4 bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:focus:ring-indigo-400 dark:text-white transition-all resize-none text-sm"></textarea>
                                </div>

                                <button type="submit" class="w-full py-3.5 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl shadow-lg shadow-indigo-200 dark:shadow-none hover:shadow-xl hover:-translate-y-0.5 transition-all duration-200">
                                    Send Proposal
                                </button>
                                
                                <p class="text-xs text-center text-slate-400 dark:text-slate-500">
                                    <i class="fas fa-lock mr-1"></i> Secure payment protection
                                </p>
                            </div>
                        </form>
                    </div>
                }
                else if (!User.Identity!.IsAuthenticated)
                {
                    <div class="bg-gradient-to-br from-slate-900 to-slate-800 dark:from-indigo-900/50 dark:to-slate-900 text-white rounded-2xl p-8 text-center shadow-xl sticky top-8">
                        <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6 backdrop-blur-sm">
                            <i class="fas fa-lock text-2xl"></i>
                        </div>
                        <h4 class="text-xl font-bold mb-2">Login to Bid</h4>
                        <p class="text-slate-300 mb-6 text-sm">Join our community of freelancers to submit proposals for this project.</p>
                        <a href="/Account/Login" class="block w-full py-3 bg-white text-slate-900 font-bold rounded-xl hover:bg-indigo-50 transition-colors">
                            Sign In / Register
                        </a>
                    </div>
                }
                else
                {
                    <!-- Summary Card for Client/Browsers -->
                    <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 shadow-sm p-6 sticky top-8">
                        <h4 class="font-bold text-slate-900 dark:text-white mb-4">About the Client</h4>
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-full flex items-center justify-center text-indigo-600 dark:text-indigo-400">
                                <i class="fas fa-user text-xl"></i>
                            </div>
                            <div>
                                <div class="font-bold text-slate-900 dark:text-white">@Model.Project.ClientName</div>
                                <div class="text-xs text-slate-500 dark:text-slate-400">Member since 2024</div>
                            </div>
                        </div>
                        
                        <div class="space-y-3 pt-4 border-t border-slate-100 dark:border-slate-700">
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-slate-500 dark:text-slate-400">Payment Verified</span>
                                <span class="text-emerald-600 dark:text-emerald-400"><i class="fas fa-check-circle"></i> Yes</span>
                            </div>
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-slate-500 dark:text-slate-400">Projects Posted</span>
                                <span class="font-medium text-slate-900 dark:text-white">12</span>
                            </div>
                            <!-- Add more client stats if available -->
                        </div>

                        @if (Model.IsOwner)
                        {
                            <div class="mt-6 pt-6 border-t border-slate-100 dark:border-slate-700">
                                <div class="p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-xl border border-indigo-100 dark:border-indigo-800">
                                    <h5 class="font-bold text-indigo-900 dark:text-indigo-200 mb-1">Your Project</h5>
                                    <p class="text-xs text-indigo-700 dark:text-indigo-300 mb-3">You can manage this project's details and review bids.</p>
                                    <a asp-action="Edit" asp-route-id="@Model.Project.Id" class="text-sm font-semibold text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 hover:underline">
                                        Edit Project Details &rarr;
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
