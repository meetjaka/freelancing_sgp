@model SGP_Freelancing.Utilities.PagedResult<SGP_Freelancing.Models.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Browse Projects";
}

<!-- Page Header -->
<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-2">Browse Projects</h1>
    <p class="text-slate-600 dark:text-slate-400">Find your next opportunity from thousands of projects</p>
</div>

<!-- Search Bar -->
<form asp-action="Index" method="get" class="mb-8">
    <div class="flex gap-3">
        <div class="flex-1 relative">
            <svg class="w-5 h-5 absolute left-4 top-1/2 transform -translate-y-1/2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input type="text" name="searchTerm" placeholder="Search projects..." value="@ViewBag.SearchTerm" class="w-full pl-12 pr-4 py-3 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
        </div>
        <button type="submit" class="px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-xl transition-colors">
            Search
        </button>
    </div>
</form>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Filters Sidebar -->
    <div class="lg:col-span-1">
        <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-6 sticky top-24">
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                </svg>
                Filters
            </h3>

            <form asp-action="Index" method="get">
                <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm">
                
                <!-- Category -->
                <div class="mb-6">
                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">Category</label>
                    <div class="space-y-2">
                        <label class="flex items-center gap-2 cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-700 p-2 rounded-lg transition-colors">
                            <input type="radio" name="categoryId" value="" class="w-4 h-4 text-indigo-600" checked>
                            <span class="text-sm text-slate-700 dark:text-slate-300">All Categories</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-700 p-2 rounded-lg transition-colors">
                            <input type="radio" name="categoryId" value="1" class="w-4 h-4 text-indigo-600">
                            <span class="text-sm text-slate-700 dark:text-slate-300">Web Development</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-700 p-2 rounded-lg transition-colors">
                            <input type="radio" name="categoryId" value="2" class="w-4 h-4 text-indigo-600">
                            <span class="text-sm text-slate-700 dark:text-slate-300">Mobile Development</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-700 p-2 rounded-lg transition-colors">
                            <input type="radio" name="categoryId" value="3" class="w-4 h-4 text-indigo-600">
                            <span class="text-sm text-slate-700 dark:text-slate-300">Design & Creative</span>
                        </label>
                    </div>
                </div>

                <!-- Budget Range -->
                <div class="mb-6">
                    <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">Budget Range</label>
                    <select name="budgetRange" class="w-full px-4 py-2.5 bg-white dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-slate-900 dark:text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <option value="">Any Budget</option>
                        <option value="0-500">$0 - $500</option>
                        <option value="500-1000">$500 - $1,000</option>
                        <option value="1000-2500">$1,000 - $2,500</option>
                        <option value="2500-5000">$2,500 - $5,000</option>
                        <option value="5000+">$5,000+</option>
                    </select>
                </div>

                <button type="submit" class="w-full px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
                    Apply Filters
                </button>
            </form>
        </div>
    </div>

    <!-- Projects List -->
    <div class="lg:col-span-3">
        @if (User.IsInRole("Client"))
        {
            <div class="bg-indigo-50 dark:bg-indigo-900/20 border border-indigo-200 dark:border-indigo-800 rounded-xl p-4 mb-6 flex items-center gap-3">
                <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm text-indigo-900 dark:text-indigo-300">Want to post a project? <a asp-action="Create" class="font-semibold hover:underline">Click here to get started</a></span>
            </div>
        }

        <!-- Results Header -->
        <div class="flex items-center justify-between mb-6">
            <p class="text-sm text-slate-600 dark:text-slate-400">
                <span class="font-semibold text-slate-900 dark:text-white">@Model.TotalCount</span> projects found
            </p>
            <select class="px-4 py-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-sm text-slate-700 dark:text-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option>Newest first</option>
                <option>Budget: High to Low</option>
                <option>Budget: Low to High</option>
                <option>Most bids</option>
            </select>
        </div>

        <!-- Projects Grid -->
        <div class="space-y-4">
            @if (Model.Items.Any())
            {
                @foreach (var project in Model.Items)
                {
                    <div class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl p-6 hover:shadow-lg hover:border-indigo-200 dark:hover:border-indigo-700 transition-all">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="inline-flex items-center px-2.5 py-1 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-700 dark:text-indigo-400 text-xs font-medium rounded-full">@project.CategoryName</span>
                                    <span class="text-xs text-slate-500 dark:text-slate-400">Posted 2 days ago</span>
                                </div>
                                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">
                                    <a asp-action="Details" asp-route-id="@project.Id">@project.Title</a>
                                </h3>
                                <p class="text-slate-600 dark:text-slate-400 line-clamp-2 mb-4">
                                    @(project.Description.Length > 200 ? project.Description.Substring(0, 200) + "..." : project.Description)
                                </p>
                                
                                @if (project.Skills.Any())
                                {
                                    <div class="flex flex-wrap gap-2 mb-4">
                                        @foreach (var skill in project.Skills.Take(5))
                                        {
                                            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-xs font-medium rounded-lg">@skill</span>
                                        }
                                        @if (project.Skills.Count() > 5)
                                        {
                                            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-xs font-medium rounded-lg">+@(project.Skills.Count() - 5)</span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="text-right ml-6">
                                <p class="text-2xl font-bold text-slate-900 dark:text-white mb-1">${{project.Budget.ToString("N0")}}</p>
                                <p class="text-sm text-slate-500 dark:text-slate-400">Fixed Price</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center justify-between pt-4 border-t border-slate-200 dark:border-slate-700">
                            <div class="flex items-center gap-6 text-sm text-slate-600 dark:text-slate-400">
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <span>@project.ClientName</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                    </svg>
                                    <span>@project.BidsCount bids</span>
                                </div>
                            </div>
                            <a asp-action="Details" asp-route-id="@project.Id" class="inline-flex items-center gap-2 px-5 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-colors">
                                View Details
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-20">
                    <div class="w-20 h-20 bg-slate-100 dark:bg-slate-700 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">No projects found</h3>
                    <p class="text-slate-600 dark:text-slate-400 mb-6">Try adjusting your filters or search terms</p>
                    @if (User.IsInRole("Client"))
                    {
                        <a asp-action="Create" class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            Post a Project
                        </a>
                    }
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="flex items-center justify-center gap-2 mt-8">
                <a class="p-2 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors @(Model.HasPrevious ? "" : "opacity-50 cursor-not-allowed")" 
                   asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-categoryId="@ViewBag.CategoryId" asp-route-searchTerm="@ViewBag.SearchTerm">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a class="min-w-[40px] h-10 flex items-center justify-center rounded-lg font-medium transition-all @(i == Model.PageNumber ? "bg-indigo-600 text-white" : "border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700")" 
                       asp-action="Index" asp-route-pageNumber="@i" asp-route-categoryId="@ViewBag.CategoryId" asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                }
                
                <a class="p-2 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors @(Model.HasNext ? "" : "opacity-50 cursor-not-allowed")" 
                   asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-categoryId="@ViewBag.CategoryId" asp-route-searchTerm="@ViewBag.SearchTerm">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        }
    </div>
</div>