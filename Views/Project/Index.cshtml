@model SGP_Freelancing.Utilities.PagedResult<SGP_Freelancing.Models.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Browse Projects";
}

<style>
    .browse-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 60px 0 80px;
        margin-bottom: -60px;
        position: relative;
        overflow: hidden;
    }

    .browse-header::before {
        content: '';
        position: absolute;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.2), transparent);
        top: -100px;
        right: -100px;
        border-radius: 50%;
        filter: blur(80px);
    }

    .search-container {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 10;
    }

    .search-box {
        background: white;
        border-radius: 16px;
        padding: 8px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        display: flex;
        gap: 8px;
    }

    .search-box input {
        border: none;
        padding: 16px 20px;
        font-size: 16px;
        flex: 1;
        border-radius: 12px;
    }

    .search-box input:focus {
        outline: none;
        background: #F9FAFB;
    }

    .search-box .btn-search {
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        color: white;
        border: none;
        padding: 16px 40px;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .search-box .btn-search:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(139, 123, 230, 0.4);
    }

    .filter-sidebar {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        position: sticky;
        top: 100px;
    }

    .filter-title {
        font-size: 20px;
        font-weight: 700;
        color: #1F2937;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .filter-section {
        margin-bottom: 28px;
        padding-bottom: 28px;
        border-bottom: 1px solid #F3F4F6;
    }

    .filter-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .filter-label {
        font-size: 15px;
        font-weight: 600;
        color: #374151;
        margin-bottom: 12px;
        display: block;
    }

    .filter-checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        cursor: pointer;
    }

    .filter-checkbox input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        cursor: pointer;
        accent-color: #8B7BE6;
    }

    .filter-checkbox label {
        cursor: pointer;
        color: #6B7280;
        font-size: 14px;
    }

    .project-card-modern {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .project-card-modern:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(103, 126, 234, 0.15);
        border-color: #8B7BE6;
    }

    .project-badge-top {
        display: inline-block;
        padding: 6px 14px;
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        color: white;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .project-card-title {
        font-size: 22px;
        font-weight: 700;
        color: #1F2937;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .project-card-description {
        font-size: 15px;
        color: #6B7280;
        line-height: 1.6;
        margin-bottom: 20px;
        flex-grow: 1;
    }

    .project-skills-row {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 20px;
    }

    .skill-tag {
        padding: 6px 12px;
        background: #F3F4F6;
        color: #4B5563;
        border-radius: 16px;
        font-size: 13px;
        font-weight: 500;
    }

    .project-footer-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 20px;
        border-top: 1px solid #F3F4F6;
        margin-top: auto;
    }

    .project-budget-amount {
        font-size: 26px;
        font-weight: 800;
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .project-meta-info {
        display: flex;
        gap: 16px;
        font-size: 14px;
        color: #6B7280;
        margin-top: 8px;
    }

    .btn-view-details {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 15px;
        margin-top: 16px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .btn-view-details:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(139, 123, 230, 0.4);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
    }

    .empty-state-icon {
        font-size: 80px;
        color: #E5E7EB;
        margin-bottom: 24px;
    }

    .empty-state-title {
        font-size: 28px;
        font-weight: 700;
        color: #1F2937;
        margin-bottom: 12px;
    }

    .empty-state-text {
        font-size: 16px;
        color: #6B7280;
        margin-bottom: 24px;
    }

    .pagination-modern {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 40px;
    }

    .pagination-modern .page-link {
        padding: 12px 18px;
        border: 2px solid #E5E7EB;
        border-radius: 10px;
        color: #6B7280;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .pagination-modern .page-link:hover {
        border-color: #8B7BE6;
        color: #8B7BE6;
        background: #F9FAFB;
    }

    .pagination-modern .page-item.active .page-link {
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        color: white;
        border-color: transparent;
    }

    .pagination-modern .page-item.disabled .page-link {
        opacity: 0.4;
        cursor: not-allowed;
    }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }

    .results-count {
        font-size: 18px;
        color: #6B7280;
    }

    .sort-dropdown {
        padding: 10px 16px;
        border: 2px solid #E5E7EB;
        border-radius: 10px;
        font-weight: 600;
        color: #6B7280;
    }

    @@media (max-width: 992px) {
        .filter-sidebar {
            position: static;
            margin-bottom: 30px;
        }
    }
</style>

<!-- Browse Header -->
<div class="browse-header">
    <div class="container">
        <h1 class="text-white text-center mb-4" style="font-size: 48px; font-weight: 800;">Find Your Next Project</h1>
        <p class="text-center text-white mb-4" style="font-size: 18px; opacity: 0.95;">Browse thousands of projects and start earning today</p>
        
        <div class="search-container">
            <form asp-action="Index" method="get">
                <div class="search-box">
                    <i class="fas fa-search" style="align-self: center; margin-left: 12px; color: #9CA3AF;"></i>
                    <input type="text" name="searchTerm" placeholder="Search for projects..." value="@ViewBag.SearchTerm">
                    <button type="submit" class="btn-search">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-5 pt-4">
    <div class="row">
        <!-- Filter Sidebar -->
        <div class="col-lg-3">
            <div class="filter-sidebar">
                <div class="filter-title">
                    <i class="fas fa-filter"></i> Filters
                </div>

                <form asp-action="Index" method="get" id="filterForm">
                    <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm">
                    
                    <!-- Category Filter -->
                    <div class="filter-section">
                        <label class="filter-label">Category</label>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="" id="cat-all" checked>
                            <label for="cat-all">All Categories</label>
                        </div>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="1" id="cat-1">
                            <label for="cat-1">Web Development</label>
                        </div>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="2" id="cat-2">
                            <label for="cat-2">Graphic Design</label>
                        </div>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="3" id="cat-3">
                            <label for="cat-3">Content Writing</label>
                        </div>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="4" id="cat-4">
                            <label for="cat-4">Digital Marketing</label>
                        </div>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="5" id="cat-5">
                            <label for="cat-5">Video Editing</label>
                        </div>
                        <div class="filter-checkbox">
                            <input type="radio" name="categoryId" value="6" id="cat-6">
                            <label for="cat-6">Mobile Apps</label>
                        </div>
                    </div>

                    <!-- Budget Range -->
                    <div class="filter-section">
                        <label class="filter-label">Budget Range</label>
                        <select name="budgetRange" class="form-select">
                            <option value="">Any Budget</option>
                            <option value="0-500">$0 - $500</option>
                            <option value="500-1000">$500 - $1,000</option>
                            <option value="1000-2500">$1,000 - $2,500</option>
                            <option value="2500-5000">$2,500 - $5,000</option>
                            <option value="5000+">$5,000+</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-view-details">
                        Apply Filters
                    </button>
                </form>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="col-lg-9">
            @if (User.IsInRole("Client"))
            {
                <div class="alert alert-info mb-4" style="border-radius: 12px;">
                    <i class="fas fa-info-circle me-2"></i>
                    Want to post a project? <a asp-action="Create" class="alert-link fw-bold">Click here to get started</a>
                </div>
            }

            <div class="results-header">
                <div class="results-count">
                    <strong>@Model.TotalCount</strong> projects found
                </div>
                <select class="sort-dropdown">
                    <option>Sort by: Newest</option>
                    <option>Sort by: Budget (High to Low)</option>
                    <option>Sort by: Budget (Low to High)</option>
                    <option>Sort by: Most Bids</option>
                </select>
            </div>

            <div class="row">
                @if (Model.Items.Any())
                {
                    @foreach (var project in Model.Items)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="project-card-modern">
                                <span class="project-badge-top">@project.CategoryName</span>
                                <h4 class="project-card-title">@project.Title</h4>
                                <p class="project-card-description">
                                    @(project.Description.Length > 150 ? project.Description.Substring(0, 150) + "..." : project.Description)
                                </p>
                                
                                @if (project.Skills.Any())
                                {
                                    <div class="project-skills-row">
                                        @foreach (var skill in project.Skills.Take(4))
                                        {
                                            <span class="skill-tag">@skill</span>
                                        }
                                        @if (project.Skills.Count() > 4)
                                        {
                                            <span class="skill-tag">+@(project.Skills.Count() - 4) more</span>
                                        }
                                    </div>
                                }
                                
                                <div class="project-footer-info">
                                    <div>
                                        <div class="project-budget-amount">$@project.Budget.ToString("N0")</div>
                                        <div class="project-meta-info">
                                            <span><i class="fas fa-user me-1"></i>@project.ClientName</span>
                                            <span><i class="fas fa-users me-1"></i>@project.BidsCount bids</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn-view-details">
                                    View Details <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <h3 class="empty-state-title">No Projects Found</h3>
                            <p class="empty-state-text">
                                We couldn't find any projects matching your criteria.<br>
                                Try adjusting your filters or search terms.
                            </p>
                            @if (User.IsInRole("Client"))
                            {
                                <a asp-action="Create" class="btn-view-details" style="max-width: 300px; margin: 0 auto;">
                                    Post the First Project
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <ul class="pagination-modern">
                    <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-categoryId="@ViewBag.CategoryId" asp-route-searchTerm="@ViewBag.SearchTerm">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-categoryId="@ViewBag.CategoryId" asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(Model.HasNext ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-categoryId="@ViewBag.CategoryId" asp-route-searchTerm="@ViewBag.SearchTerm">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>
