@model List<SGP_Freelancing.Models.DTOs.ProjectDto>
@{
    ViewData["Title"] = "My Projects";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="max-w-7xl mx-auto px-4 py-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
        <div>
            <h2 class="text-3xl font-bold text-slate-900">My Projects</h2>
            <p class="text-slate-500 mt-1">Manage all your posted projects</p>
        </div>
        <a asp-action="Create" class="inline-flex items-center justify-center px-5 py-2.5 font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all">
            <i class="fas fa-plus-circle mr-2"></i>New Project
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <!-- Empty State -->
        <div class="bg-white rounded-xl border border-slate-100 shadow-md p-12 text-center">
            <div class="w-20 h-20 mx-auto bg-indigo-100 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-folder-open text-indigo-600 text-3xl"></i>
            </div>
            <h4 class="text-2xl font-bold text-slate-900 mb-3">No Projects Yet</h4>
            <p class="text-slate-500 mb-6">You haven't created any projects. Start by posting your first project!</p>
            <a asp-action="Create" class="inline-flex items-center justify-center px-5 py-2.5 font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all">
                <i class="fas fa-plus-circle mr-2"></i>Create Your First Project
            </a>
        </div>
    }
    else
    {
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-xl flex items-center justify-center text-white text-lg mr-4">
                        <i class="fas fa-folder"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-slate-900">@Model.Count</h3>
                        <p class="text-sm text-slate-500">Total Projects</p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center text-white text-lg mr-4">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-slate-900">@Model.Count(p => p.Status == "Active")</h3>
                        <p class="text-sm text-slate-500">Active</p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl flex items-center justify-center text-white text-lg mr-4">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-slate-900">@Model.Count(p => p.Status == "InProgress")</h3>
                        <p class="text-sm text-slate-500">In Progress</p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl border border-slate-100 shadow-md p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center text-white text-lg mr-4">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-slate-900">@Model.Count(p => p.Status == "Completed")</h3>
                        <p class="text-sm text-slate-500">Completed</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Projects List -->
        <div class="bg-white rounded-xl border border-slate-100 shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Project</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Budget</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Bids</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Deadline</th>
                            <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var project in Model)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div>
                                        <a asp-action="Details" asp-route-id="@project.Id" class="font-semibold text-slate-900 hover:text-indigo-600">
                                            @project.Title
                                        </a>
                                        <p class="text-sm text-slate-500 mt-1">@(string.IsNullOrEmpty(project.Description) ? "" : project.Description.Substring(0, Math.Min(60, project.Description.Length)))...</p>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    @{
                                        var (bgClass, textClass) = project.Status switch
                                        {
                                            "Active" => ("bg-emerald-100", "text-emerald-700"),
                                            "InProgress" => ("bg-amber-100", "text-amber-700"),
                                            "Completed" => ("bg-blue-100", "text-blue-700"),
                                            "Cancelled" => ("bg-red-100", "text-red-700"),
                                            _ => ("bg-slate-100", "text-slate-700")
                                        };
                                    }
                                    <span class="px-3 py-1 text-xs font-semibold @bgClass @textClass rounded-full">@project.Status</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-lg font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">$@project.Budget.ToString("N0")</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 bg-slate-100 text-slate-700 text-sm font-medium rounded-full">
                                        <i class="fas fa-users mr-1"></i>@project.BidsCount
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-slate-500">
                                        <i class="fas fa-calendar mr-1"></i>
                                        @project.Deadline?.ToString("MMM dd, yyyy")
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex justify-end gap-2">
                                        <a asp-action="Details" asp-route-id="@project.Id" class="inline-flex items-center justify-center text-sm px-3 py-1.5 border-2 border-indigo-600 text-indigo-600 rounded-lg hover:bg-indigo-600 hover:text-white transition-all" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@project.Id" class="inline-flex items-center justify-center text-sm px-3 py-1.5 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition-all" title="Edit">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@project.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this project?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="px-3 py-1.5 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition-colors text-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
