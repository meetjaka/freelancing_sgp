@{
    ViewData["Title"] = "Dashboard";
    var totalProjects = ViewBag.TotalProjects ?? 0;
    var activeProjects = ViewBag.ActiveProjects ?? 0;
    var completedProjects = ViewBag.CompletedProjects ?? 0;
    var unreadMessages = ViewBag.UnreadMessages ?? 0;
}

<style>
    .dashboard-welcome {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 32px;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .dashboard-welcome::before {
        content: '';
        position: absolute;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.2), transparent);
        top: -100px;
        right: -100px;
        border-radius: 50%;
        filter: blur(60px);
    }

    .welcome-content {
        position: relative;
        z-index: 10;
    }

    .welcome-title {
        font-size: 32px;
        font-weight: 800;
        margin-bottom: 8px;
    }

    .welcome-subtitle {
        font-size: 16px;
        opacity: 0.95;
    }

    .stat-card-modern {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .stat-card-modern:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(139, 123, 230, 0.15);
        border-color: #8B7BE6;
    }

    .stat-icon-modern {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 20px;
    }

    .stat-icon-modern.purple {
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        color: white;
    }

    .stat-icon-modern.blue {
        background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
        color: white;
    }

    .stat-icon-modern.green {
        background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
        color: white;
    }

    .stat-icon-modern.orange {
        background: linear-gradient(135deg, #F59E0B 0%, #FBBF24 100%);
        color: white;
    }

    .stat-label {
        font-size: 14px;
        color: #6B7280;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .stat-number {
        font-size: 36px;
        font-weight: 800;
        color: #1F2937;
        margin-bottom: 8px;
    }

    .stat-change {
        font-size: 13px;
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 12px;
        display: inline-block;
    }

    .stat-change.up {
        background: #D1FAE5;
        color: #059669;
    }

    .stat-change.down {
        background: #FEE2E2;
        color: #DC2626;
    }

    .content-card {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header-modern {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .card-title-modern {
        font-size: 20px;
        font-weight: 700;
        color: #1F2937;
        margin: 0;
    }

    .btn-view-all {
        color: #8B7BE6;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .btn-view-all:hover {
        color: #4F7CFF;
    }

    .project-item {
        padding: 20px;
        border-bottom: 1px solid #F3F4F6;
        transition: all 0.3s ease;
    }

    .project-item:last-child {
        border-bottom: none;
    }

    .project-item:hover {
        background: #F9FAFB;
        border-radius: 12px;
    }

    .project-icon-wrapper {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-right: 16px;
    }

    .project-icon-wrapper.purple-bg {
        background: linear-gradient(135deg, rgba(139, 123, 230, 0.1) 0%, rgba(79, 124, 255, 0.1) 100%);
        color: #8B7BE6;
    }

    .project-icon-wrapper.blue-bg {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(96, 165, 250, 0.1) 100%);
        color: #3B82F6;
    }

    .project-icon-wrapper.green-bg {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(52, 211, 153, 0.1) 100%);
        color: #10B981;
    }

    .project-name {
        font-size: 16px;
        font-weight: 700;
        color: #1F2937;
        margin-bottom: 4px;
    }

    .project-date {
        font-size: 13px;
        color: #9CA3AF;
    }

    .project-budget {
        font-size: 18px;
        font-weight: 700;
        color: #1F2937;
    }

    .badge-modern {
        padding: 6px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-success-modern {
        background: #D1FAE5;
        color: #059669;
    }

    .badge-primary-modern {
        background: #DBEAFE;
        color: #2563EB;
    }

    .badge-warning-modern {
        background: #FEF3C7;
        color: #D97706;
    }

    .btn-action-modern {
        padding: 8px 20px;
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-action-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(139, 123, 230, 0.3);
        color: white;
    }

    .activity-item {
        display: flex;
        gap: 16px;
        padding: 16px 0;
        border-bottom: 1px solid #F3F4F6;
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 16px;
    }

    .activity-icon.purple {
        background: rgba(139, 123, 230, 0.1);
        color: #8B7BE6;
    }

    .activity-icon.green {
        background: rgba(16, 185, 129, 0.1);
        color: #10B981;
    }

    .activity-icon.blue {
        background: rgba(59, 130, 246, 0.1);
        color: #3B82F6;
    }

    .activity-content {
        flex: 1;
    }

    .activity-text {
        font-size: 14px;
        color: #4B5563;
        margin-bottom: 4px;
    }

    .activity-time {
        font-size: 12px;
        color: #9CA3AF;
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 32px;
    }

    .quick-action-btn {
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s ease;
        display: block;
    }

    .quick-action-btn:hover {
        border-color: #8B7BE6;
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(139, 123, 230, 0.15);
    }

    .quick-action-icon {
        font-size: 32px;
        margin-bottom: 12px;
        background: linear-gradient(135deg, #8B7BE6 0%, #4F7CFF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .quick-action-text {
        font-size: 14px;
        font-weight: 600;
        color: #1F2937;
    }
</style>

<!-- Welcome Header -->
<div class="dashboard-welcome">
    <div class="welcome-content">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h1 class="welcome-title">Welcome back, @ViewBag.UserName! ðŸ‘‹</h1>
                <p class="welcome-subtitle mb-0">Here's what's happening with your projects today</p>
            </div>
            <a asp-controller="Project" asp-action="Create" class="btn-action-modern mt-3 mt-md-0">
                <i class="fas fa-plus me-2"></i>New Project
            </a>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="stat-card-modern">
            <div class="stat-icon-modern purple">
                <i class="fas fa-briefcase"></i>
            </div>
            <div class="stat-label">Total Projects</div>
            <div class="stat-number">@totalProjects</div>
            <span class="stat-change up"><i class="fas fa-arrow-up me-1"></i>12%</span>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card-modern">
            <div class="stat-icon-modern blue">
                <i class="fas fa-tasks"></i>
            </div>
            <div class="stat-label">Active Projects</div>
            <div class="stat-number">@activeProjects</div>
            <span class="stat-change up"><i class="fas fa-arrow-up me-1"></i>8%</span>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card-modern">
            <div class="stat-icon-modern green">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-label">Completed</div>
            <div class="stat-number">@completedProjects</div>
            <span class="stat-change up"><i class="fas fa-arrow-up me-1"></i>24%</span>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card-modern">
            <div class="stat-icon-modern orange">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="stat-label">Messages</div>
            <div class="stat-number">@unreadMessages</div>
            <span class="stat-change down"><i class="fas fa-arrow-down me-1"></i>3%</span>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions">
    <a asp-controller="Project" asp-action="Index" class="quick-action-btn">
        <div class="quick-action-icon"><i class="fas fa-search"></i></div>
        <div class="quick-action-text">Browse Projects</div>
    </a>
    <a asp-controller="Project" asp-action="Create" class="quick-action-btn">
        <div class="quick-action-icon"><i class="fas fa-plus-circle"></i></div>
        <div class="quick-action-text">Post Project</div>
    </a>
    <a asp-controller="Message" asp-action="Index" class="quick-action-btn">
        <div class="quick-action-icon"><i class="fas fa-comments"></i></div>
        <div class="quick-action-text">Messages</div>
    </a>
    <a asp-controller="Account" asp-action="Profile" class="quick-action-btn">
        <div class="quick-action-icon"><i class="fas fa-user-cog"></i></div>
        <div class="quick-action-text">Settings</div>
    </a>
</div>

