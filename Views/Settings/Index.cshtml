@{
    ViewData["Title"] = "Settings";
}

<div class="max-w-7xl mx-auto px-4 py-6 bg-slate-50 dark:bg-[#0B1120] transition-colors duration-300">
    <!-- Header -->
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-1 transition-colors duration-300">Settings</h2>
        <p class="text-slate-500 dark:text-slate-400 transition-colors duration-300">Manage your account preferences and security</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Settings Sidebar -->
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-100 dark:border-slate-700 overflow-hidden sticky top-24 transition-colors duration-300">
                <nav class="flex flex-col">
                    <a href="#account" class="settings-tab active flex items-center px-6 py-4 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 border-l-4 border-indigo-600 dark:border-indigo-500 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 hover:text-indigo-600 dark:hover:text-indigo-400 transition-all" data-tab="account">
                        <i class="fas fa-user-circle mr-3 w-5 text-center"></i>Account Settings
                    </a>
                    <a href="#security" class="settings-tab flex items-center px-6 py-4 text-slate-700 dark:text-slate-300 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 hover:text-indigo-600 dark:hover:text-indigo-400 border-l-4 border-transparent hover:border-indigo-600 dark:hover:border-indigo-500 transition-all" data-tab="security">
                        <i class="fas fa-shield-alt mr-3 w-5 text-center"></i>Security
                    </a>
                    <a href="#notifications" class="settings-tab flex items-center px-6 py-4 text-slate-700 dark:text-slate-300 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 hover:text-indigo-600 dark:hover:text-indigo-400 border-l-4 border-transparent hover:border-indigo-600 dark:hover:border-indigo-500 transition-all" data-tab="notifications">
                        <i class="fas fa-bell mr-3 w-5 text-center"></i>Notifications
                    </a>
                    <a href="#privacy" class="settings-tab flex items-center px-6 py-4 text-slate-700 dark:text-slate-300 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 hover:text-indigo-600 dark:hover:text-indigo-400 border-l-4 border-transparent hover:border-indigo-600 dark:hover:border-indigo-500 transition-all" data-tab="privacy">
                        <i class="fas fa-eye mr-3 w-5 text-center"></i>Privacy
                    </a>
                    <a href="#billing" class="settings-tab flex items-center px-6 py-4 text-slate-700 dark:text-slate-300 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 hover:text-indigo-600 dark:hover:text-indigo-400 border-l-4 border-transparent hover:border-indigo-600 dark:hover:border-indigo-500 transition-all" data-tab="billing">
                        <i class="fas fa-credit-card mr-3 w-5 text-center"></i>Billing
                    </a>
                </nav>
            </div>
        </div>

        <!-- Settings Content -->
        <div class="lg:col-span-3">
            <!-- Account Settings -->
            <div class="settings-panel" id="account">
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-100 dark:border-slate-700 p-6 mb-6 transition-colors duration-300">
                    <h5 class="text-xl font-bold text-slate-900 dark:text-white mb-6 flex items-center transition-colors duration-300">
                        <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center text-white mr-3">
                            <i class="fas fa-user"></i>
                        </div>
                        Account Information
                    </h5>
                    <form class="space-y-5">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">First Name</label>
                                <input type="text" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" value="@User.Identity?.Name">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">Last Name</label>
                                <input type="text" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" value="User">
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">Email Address</label>
                            <input type="email" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" value="@User.Identity?.Name@@example.com">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">Phone Number</label>
                            <input type="tel" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-500 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" placeholder="+1 (555) 000-0000">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">Bio</label>
                            <textarea class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-slate-500 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none" rows="4" placeholder="Tell us about yourself..."></textarea>
                        </div>
                        <button type="submit" class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                            <i class="fas fa-check-circle mr-2"></i>Save Changes
                        </button>
                    </form>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="settings-panel hidden" id="security">
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-100 dark:border-slate-700 p-6 mb-6 transition-colors duration-300">
                    <h5 class="text-xl font-bold text-slate-900 dark:text-white mb-6 flex items-center transition-colors duration-300">
                        <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center text-white mr-3">
                            <i class="fas fa-lock"></i>
                        </div>
                        Change Password
                    </h5>
                    <form class="space-y-5">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">Current Password</label>
                            <input type="password" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">New Password</label>
                            <input type="password" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 transition-colors duration-300">Confirm New Password</label>
                            <input type="password" class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-700 border border-slate-200 dark:border-slate-600 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                        </div>
                        <button type="submit" class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                            <i class="fas fa-shield-alt mr-2"></i>Update Password
                        </button>
                    </form>
                </div>

                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-100 dark:border-slate-700 p-6 transition-colors duration-300">
                    <h5 class="text-xl font-bold text-slate-900 dark:text-white mb-4 transition-colors duration-300">Two-Factor Authentication</h5>
                    <p class="text-slate-500 dark:text-slate-400 mb-4 transition-colors duration-300">Add an extra layer of security to your account</p>
                    <button class="px-6 py-3 border-2 border-indigo-600 dark:border-indigo-500 text-indigo-600 dark:text-indigo-400 font-semibold rounded-xl hover:bg-indigo-600 hover:text-white transition-all duration-200 flex items-center">
                        <i class="fas fa-mobile-alt mr-2"></i>Enable 2FA
                    </button>
                </div>
            </div>

            <!-- Notification Settings -->
            <div class="settings-panel hidden" id="notifications">
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-100 dark:border-slate-700 p-6 transition-colors duration-300">
                    <h5 class="text-xl font-bold text-slate-900 dark:text-white mb-6 flex items-center transition-colors duration-300">
                        <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center text-white mr-3">
                            <i class="fas fa-bell"></i>
                        </div>
                        Notification Preferences
                    </h5>
                    <div class="space-y-4 mb-6">
                        <label class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-700 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 dark:text-white block transition-colors duration-300">Email Notifications</span>
                                <span class="text-sm text-slate-500 dark:text-slate-400 transition-colors duration-300">Receive updates via email</span>
                            </div>
                            <input type="checkbox" checked class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                        <label class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-700 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 dark:text-white block transition-colors duration-300">New Project Alerts</span>
                                <span class="text-sm text-slate-500 dark:text-slate-400 transition-colors duration-300">Get notified about new projects</span>
                            </div>
                            <input type="checkbox" checked class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                        <label class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-700 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 dark:text-white block transition-colors duration-300">Message Notifications</span>
                                <span class="text-sm text-slate-500 dark:text-slate-400 transition-colors duration-300">Notifications for new messages</span>
                            </div>
                            <input type="checkbox" checked class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                        <label class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-700/50 rounded-xl cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-700 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 dark:text-white block transition-colors duration-300">Bid Updates</span>
                                <span class="text-sm text-slate-500 dark:text-slate-400 transition-colors duration-300">Updates on your bids</span>
                            </div>
                            <input type="checkbox" class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                    </div>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>Save Preferences
                    </button>
                </div>
            </div>

            <!-- Privacy Settings -->
            <div class="settings-panel hidden" id="privacy">
                <div class="bg-white rounded-xl shadow-lg border border-slate-100 p-6">
                    <h5 class="text-xl font-bold text-slate-900 mb-6 flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center text-white mr-3">
                            <i class="fas fa-eye"></i>
                        </div>
                        Privacy Settings
                    </h5>
                    <div class="space-y-4 mb-6">
                        <label class="flex items-center justify-between p-4 bg-slate-50 rounded-xl cursor-pointer hover:bg-slate-100 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 block">Public Profile</span>
                                <span class="text-sm text-slate-500">Make your profile visible to everyone</span>
                            </div>
                            <input type="checkbox" checked class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                        <label class="flex items-center justify-between p-4 bg-slate-50 rounded-xl cursor-pointer hover:bg-slate-100 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 block">Show Email</span>
                                <span class="text-sm text-slate-500">Display email on your profile</span>
                            </div>
                            <input type="checkbox" class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                        <label class="flex items-center justify-between p-4 bg-slate-50 rounded-xl cursor-pointer hover:bg-slate-100 transition-all">
                            <div>
                                <span class="font-semibold text-slate-900 block">Show Portfolio</span>
                                <span class="text-sm text-slate-500">Display your completed projects</span>
                            </div>
                            <input type="checkbox" checked class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        </label>
                    </div>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>Save Settings
                    </button>
                </div>
            </div>

            <!-- Billing Settings -->
            <div class="settings-panel hidden" id="billing">
                <div class="bg-white rounded-xl shadow-lg border border-slate-100 p-6 mb-6">
                    <h5 class="text-xl font-bold text-slate-900 mb-6 flex items-center">
                        <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center text-white mr-3">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        Payment Methods
                    </h5>
                    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-4 flex items-center">
                        <i class="fas fa-info-circle text-blue-600 mr-3"></i>
                        <span class="text-blue-800">No payment methods added yet</span>
                    </div>
                    <button class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                        <i class="fas fa-plus-circle mr-2"></i>Add Payment Method
                    </button>
                </div>

                <div class="bg-white rounded-xl shadow-lg border border-slate-100 p-6">
                    <h5 class="text-xl font-bold text-slate-900 mb-4">Billing History</h5>
                    <p class="text-slate-500">No billing history available</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tabs = document.querySelectorAll('.settings-tab');
        const panels = document.querySelectorAll('.settings-panel');
        
        tabs.forEach(tab => {
            tab.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('data-tab');
                
                // Remove active from all tabs
                tabs.forEach(t => t.classList.remove('active', 'bg-indigo-50', 'text-indigo-600', 'border-indigo-600'));
                // Add active to clicked tab
                this.classList.add('active', 'bg-indigo-50', 'text-indigo-600', 'border-indigo-600');
                
                // Hide all panels
                panels.forEach(p => p.classList.add('hidden'));
                // Show target panel
                document.getElementById(targetId).classList.remove('hidden');
            });
        });
    });
</script>
