@model IEnumerable<SGP_Freelancing.Models.DTOs.ContractDto>
@{
    ViewData["Title"] = "My Contracts";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-2">My Contracts</h1>
    <p class="text-slate-600 dark:text-slate-400">Manage your active and completed work agreements.</p>
</div>

<div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-slate-50 dark:bg-slate-900/50">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Project</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Party</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Start Date</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-slate-500 uppercase tracking-wider">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                @if (Model.Any())
                {
                    foreach (var contract in Model)
                    {
                        <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                            <td class="px-6 py-4">
                                <div class="text-sm font-semibold text-slate-900 dark:text-white">@contract.ProjectTitle</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-slate-600 dark:text-slate-300">
                                    @(User.IsInRole("Client") ? contract.FreelancerName : contract.ClientName)
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-bold text-slate-900 dark:text-white">$@contract.Amount.ToString("N2")</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-slate-500">@contract.StartDate.ToString("MMM d, yyyy")</div>
                            </td>
                            <td class="px-6 py-4">
                                @{
                                    string badgeClass = contract.Status switch
                                    {
                                        "Active" => "bg-indigo-50 text-indigo-700 dark:bg-indigo-900/20 dark:text-indigo-400",
                                        "Completed" => "bg-emerald-50 text-emerald-700 dark:bg-emerald-900/20 dark:text-emerald-400",
                                        "Cancelled" => "bg-rose-50 text-rose-700 dark:bg-rose-900/20 dark:text-rose-400",
                                        _ => "bg-slate-100 text-slate-700 dark:bg-slate-800 dark:text-slate-400"
                                    };
                                }
                                <span class="px-2.5 py-1 text-xs font-medium rounded-full @badgeClass">
                                    @contract.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <a asp-action="Details" asp-route-id="@contract.Id" class="text-indigo-600 hover:text-indigo-700 font-medium text-sm">View Details</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center">
                                <div class="w-16 h-16 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center mb-4">
                                    <i class="fas fa-file-contract text-2xl text-slate-400"></i>
                                </div>
                                <h3 class="text-slate-900 dark:text-white font-semibold">No contracts found</h3>
                                <p class="text-slate-500 text-sm mt-1">You haven't started any projects yet.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
