@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full text-center">
        <!-- Icon -->
        <div class="mb-6">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-red-100 rounded-full">
                <i class="fas fa-shield-alt text-red-500 text-5xl"></i>
            </div>
        </div>
        
        <!-- Content -->
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Access Denied</h1>
        <p class="text-lg text-gray-500 mb-8">
            You don't have permission to access this page. This feature may require a specific role or subscription.
        </p>
        
        <!-- Actions -->
        <div class="flex gap-4 justify-center flex-wrap">
            <a asp-controller="Dashboard" asp-action="Index" 
               class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center">
                <i class="fas fa-home mr-2"></i>Go to Dashboard
            </a>
            <a asp-controller="Home" asp-action="Index" 
               class="px-6 py-3 bg-white border-2 border-gray-200 text-gray-700 font-semibold rounded-xl hover:border-gray-300 hover:bg-gray-50 transition-all duration-200 flex items-center">
                <i class="fas fa-arrow-left mr-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>
