@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="col-md-6 text-center">
            <div class="mb-4">
                <i class="bi bi-shield-lock" style="font-size: 5rem; color: #dc3545;"></i>
            </div>
            <h1 class="display-4 fw-bold mb-3">Access Denied</h1>
            <p class="lead text-muted mb-4">
                You don't have permission to access this page. This feature may require a specific role or subscription.
            </p>
            <div class="d-flex gap-3 justify-content-center">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                    <i class="bi bi-house-door me-2"></i>Go to Dashboard
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
