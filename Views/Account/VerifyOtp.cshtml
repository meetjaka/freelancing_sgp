@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var email = ViewData["Email"]?.ToString() ?? "";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-slate-50 dark:bg-[#0B1120] transition-colors duration-300">
    <div class="max-w-md w-full">

        <!-- Card -->
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl dark:shadow-slate-900/50 p-8 border border-gray-100 dark:border-slate-700 transition-colors duration-300">

            <!-- Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-2xl mb-6 shadow-lg">
                    <i class="fas fa-envelope-open-text text-white text-2xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2 transition-colors duration-300">Verify Your Email</h2>
                <p class="text-gray-500 dark:text-slate-400 transition-colors duration-300">
                    We sent a 6-digit OTP to<br>
                    <span class="font-semibold text-indigo-600 dark:text-indigo-400">@email</span>
                </p>
            </div>

            <!-- Alerts -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-5 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg text-sm flex items-center gap-2">
                    <i class="fas fa-check-circle"></i>
                    <span>@TempData["SuccessMessage"]</span>
                </div>
            }
            @if (TempData["InfoMessage"] != null)
            {
                <div class="mb-5 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 text-blue-700 dark:text-blue-400 px-4 py-3 rounded-lg text-sm flex items-center gap-2">
                    <i class="fas fa-info-circle"></i>
                    <span>@TempData["InfoMessage"]</span>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-5 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-lg text-sm flex items-center gap-2">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@TempData["ErrorMessage"]</span>
                </div>
            }

            <!-- OTP Form -->
            <form asp-action="VerifyOtp" method="post" class="space-y-6" id="otpForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="email" value="@email" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All"
                         class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-lg text-sm transition-colors duration-300"
                         role="alert"></div>
                }

                <!-- OTP Input Boxes -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-slate-300 mb-3 text-center transition-colors duration-300">
                        Enter the 6-digit code
                    </label>
                    <div class="flex justify-center gap-3" id="otpBoxes">
                        @for (int i = 0; i < 6; i++)
                        {
                            <input type="text"
                                   maxlength="1"
                                   class="otp-digit w-12 h-14 text-center text-2xl font-bold bg-gray-50 dark:bg-slate-700 border-2 border-gray-200 dark:border-slate-600 rounded-xl text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all"
                                   inputmode="numeric"
                                   pattern="[0-9]"
                                   autocomplete="off" />
                        }
                    </div>
                    <!-- Hidden input that collects the full OTP -->
                    <input type="hidden" name="otp" id="otpValue" />
                </div>

                <!-- Timer -->
                <div class="text-center">
                    <p class="text-sm text-gray-500 dark:text-slate-400" id="timerText">
                        OTP expires in <span id="countdown" class="font-semibold text-indigo-600 dark:text-indigo-400">10:00</span>
                    </p>
                </div>

                <!-- Submit -->
                <button type="submit" id="verifyBtn"
                        class="w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-shield-check"></i> Verify Email
                </button>
            </form>

            <!-- Resend OTP -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-500 dark:text-slate-400 mb-3">Didn't receive the code?</p>
                <form asp-action="ResendOtp" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="email" value="@email" />
                    <button type="submit"
                            class="text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 font-semibold text-sm transition-colors flex items-center gap-1 mx-auto">
                        <i class="fas fa-redo-alt text-xs"></i> Resend OTP
                    </button>
                </form>
            </div>

            <!-- Back to Register -->
            <div class="mt-4 text-center">
                <a asp-action="Register" class="text-sm text-gray-400 dark:text-slate-500 hover:text-gray-600 dark:hover:text-slate-300 transition-colors">
                    ← Back to Register
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // ── OTP digit boxes ──────────────────────────────────────────────
    const digits = document.querySelectorAll('.otp-digit');
    const otpValue = document.getElementById('otpValue');
    const form = document.getElementById('otpForm');

    digits.forEach((input, idx) => {
        input.addEventListener('input', (e) => {
            const val = e.target.value.replace(/\D/g, '');
            e.target.value = val.slice(-1);
            if (val && idx < digits.length - 1) digits[idx + 1].focus();
            syncOtp();
        });

        input.addEventListener('keydown', (e) => {
            if (e.key === 'Backspace' && !e.target.value && idx > 0) {
                digits[idx - 1].focus();
            }
        });

        input.addEventListener('paste', (e) => {
            e.preventDefault();
            const pasted = (e.clipboardData || window.clipboardData).getData('text').replace(/\D/g, '');
            pasted.split('').slice(0, 6).forEach((ch, i) => {
                if (digits[i]) digits[i].value = ch;
            });
            const next = Math.min(pasted.length, 5);
            digits[next].focus();
            syncOtp();
        });
    });

    function syncOtp() {
        otpValue.value = Array.from(digits).map(d => d.value).join('');
    }

    form.addEventListener('submit', (e) => {
        syncOtp();
        if (otpValue.value.length < 6) {
            e.preventDefault();
            alert('Please enter all 6 digits of the OTP.');
        }
    });

    // ── Countdown timer ──────────────────────────────────────────────
    let seconds = 10 * 60;
    const countdownEl = document.getElementById('countdown');
    const timerText = document.getElementById('timerText');

    const timer = setInterval(() => {
        seconds--;
        if (seconds <= 0) {
            clearInterval(timer);
            countdownEl.textContent = '00:00';
            timerText.innerHTML = '<span class="text-red-500 font-semibold">OTP has expired. Please resend.</span>';
            return;
        }
        const m = String(Math.floor(seconds / 60)).padStart(2, '0');
        const s = String(seconds % 60).padStart(2, '0');
        countdownEl.textContent = `${m}:${s}`;
    }, 1000);

    // Auto-focus first box
    digits[0].focus();
</script>
}
