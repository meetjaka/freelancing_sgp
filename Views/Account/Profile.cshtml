@using System.Security.Claims
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var userName = User.Identity?.Name ?? "User";
    var userEmail = User.FindFirstValue(ClaimTypes.Email) ?? "user@example.com";
    var userRole = User.IsInRole("Client") ? "Client" : User.IsInRole("Freelancer") ? "Freelancer" : "User";
    var initials = !string.IsNullOrEmpty(userName) ? userName[0].ToString().ToUpper() : "U";
}

<div class="min-h-screen bg-gray-50/50 dark:bg-slate-900 transition-colors duration-300">
    <!-- Header Banner -->
    <div class="h-48 w-full bg-slate-900 relative overflow-hidden">
         <div class="absolute inset-0 bm i4o,g-gradient-to-r from-slate-900 to-slate-800"></div>
         <!-- Abstract shapes -->
         <div class="absolute right-0 top-0 h-full w-1/3 bg-white/5 skew-x-12 transform translate-x-12"></div>
         <div class="absolute left-10 bottom-0 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-20 relative z-10 pb-12">
        
        <!-- Profile Header Card -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 p-6 sm:p-8 mb-8 transition-colors duration-300">
            <div class="flex flex-col sm:flex-row items-start sm:items-center gap-6">
                <div class="relative group">
                    <div class="w-24 h-24 sm:w-32 sm:h-32 rounded-xl bg-slate-100 dark:bg-slate-700 flex items-center justify-center text-4xl font-bold text-slate-700 dark:text-slate-300 ring-4 ring-white dark:ring-slate-800 shadow-md transition-all duration-300 group-hover:scale-105">
                        @initials
                    </div>
                    <div class="absolute -bottom-2 -right-2 bg-emerald-500 text-white p-1.5 rounded-full border-4 border-white dark:border-slate-800" title="Online">
                        <span class="sr-only">Online</span>
                        <div class="w-2.5 h-2.5 bg-white rounded-full opacity-0"></div>
                    </div>
                </div>
                
                <div class="flex-1 min-w-0 w-full">
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                        <div>
                            <h1 class="text-3xl font-bold text-gray-900 dark:text-white tracking-tight mb-1">@userName</h1>
                            <div class="flex flex-wrap items-center gap-3 text-sm text-gray-500 dark:text-slate-400">
                                <span class="flex items-center gap-1.5 px-2.5 py-0.5 rounded-full bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium">
                                    <i class="fas fa-user-tag text-xs"></i> @userRole
                                </span>
                                <span class="flex items-center gap-1.5">
                                    <i class="fas fa-map-marker-alt text-gray-400"></i> New York, USA
                                </span>
                                <span class="flex items-center gap-1.5">
                                    <i class="far fa-clock text-gray-400"></i> Local Time: @DateTime.Now.ToString("h:mm tt")
                                </span>
                            </div>
                        </div>
                        <div class="flex gap-3 mt-2 lg:mt-0">
                             <a href="#" class="px-5 py-2.5 bg-slate-900 dark:bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-slate-800 dark:hover:bg-blue-700 transition-all shadow-sm hover:shadow active:scale-95">
                                <i class="fas fa-pen-to-square mr-2"></i>Edit Profile
                            </a>
                            <button class="p-2.5 text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-white border border-gray-200 dark:border-slate-600 rounded-lg hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-share-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Stats Row -->
            <div class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-6 border-t border-gray-100 dark:border-slate-700 pt-8">
                 <div class="flex items-center gap-3">
                    <div class="p-2 bg-indigo-50 dark:bg-indigo-900/30 rounded-lg text-indigo-600 dark:text-indigo-400">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <div>
                        <div class="text-xl font-bold text-gray-900 dark:text-white">12</div>
                        <div class="text-xs font-medium text-gray-500 dark:text-slate-400 uppercase tracking-wide">Projects</div>
                    </div>
                </div>
                 <div class="flex items-center gap-3">
                    <div class="p-2 bg-amber-50 dark:bg-amber-900/30 rounded-lg text-amber-600 dark:text-amber-400">
                        <i class="fas fa-star"></i>
                    </div>
                    <div>
                        <div class="text-xl font-bold text-gray-900 dark:text-white">4.9/5</div>
                        <div class="text-xs font-medium text-gray-500 dark:text-slate-400 uppercase tracking-wide">Rating</div>
                    </div>
                </div>
                 <div class="flex items-center gap-3">
                    <div class="p-2 bg-emerald-50 dark:bg-emerald-900/30 rounded-lg text-emerald-600 dark:text-emerald-400">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <div>
                        <div class="text-xl font-bold text-gray-900 dark:text-white">$12.5k</div>
                        <div class="text-xs font-medium text-gray-500 dark:text-slate-400 uppercase tracking-wide">Earnings</div>
                    </div>
                </div>
                 <div class="flex items-center gap-3">
                    <div class="p-2 bg-purple-50 dark:bg-purple-900/30 rounded-lg text-purple-600 dark:text-purple-400">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div>
                        <div class="text-xl font-bold text-gray-900 dark:text-white">100%</div>
                        <div class="text-xs font-medium text-gray-500 dark:text-slate-400 uppercase tracking-wide">Success Rate</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column: Details -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- About / Info -->
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 overflow-hidden transition-colors duration-300">
                    <div class="px-6 py-4 border-b border-gray-100 dark:border-slate-700 flex items-center justify-between bg-gray-50/50 dark:bg-slate-800/50">
                        <h3 class="text-base font-semibold text-gray-900 dark:text-white">Personal Information</h3>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-6 gap-x-8">
                            <div>
                                <label class="block text-xs font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-1.5">Full Name</label>
                                <p class="text-gray-900 dark:text-slate-200 font-medium text-sm sm:text-base">@userName</p>
                            </div>
                            <div>
                                <label class="block text-xs font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-1.5">Email Address</label>
                                <p class="text-gray-900 dark:text-slate-200 font-medium text-sm sm:text-base break-all">@userEmail</p>
                            </div>
                            <div>
                                <label class="block text-xs font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-1.5">Account Role</label>
                                <p class="text-gray-900 dark:text-slate-200 font-medium text-sm sm:text-base">@userRole</p>
                            </div>
                            <div>
                                <label class="block text-xs font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-1.5">Member Since</label>
                                <p class="text-gray-900 dark:text-slate-200 font-medium text-sm sm:text-base">January 2026</p>
                            </div>
                             <div class="sm:col-span-2 pt-2">
                                <label class="block text-xs font-semibold text-gray-400 dark:text-slate-500 uppercase tracking-wider mb-2">Bio</label>
                                <p class="text-gray-600 dark:text-slate-300 leading-relaxed text-sm bg-gray-50 dark:bg-slate-700/50 p-4 rounded-lg border border-gray-100 dark:border-slate-700">
                                    Passionate professional dedicated to delivering high-quality results. Experienced in full-stack development and modern UI/UX design. Always eager to take on new challenges and collaborate with creative teams.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Activity Feed -->
                <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 overflow-hidden transition-colors duration-300">
                     <div class="px-6 py-4 border-b border-gray-100 dark:border-slate-700 flex items-center justify-between bg-gray-50/50 dark:bg-slate-800/50">
                        <h3 class="text-base font-semibold text-gray-900 dark:text-white">Recent Activity</h3>
                        <a href="#" class="text-xs text-blue-600 dark:text-blue-400 hover:text-blue-700 font-medium uppercase tracking-wide">View All</a>
                    </div>
                    <div class="p-6">
                        <ul class="space-y-0">
                            <li class="relative pl-6 pb-6 border-l-2 border-gray-100 dark:border-slate-700 last:pb-0 last:border-0 border-indigo-200">
                                <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-white dark:bg-slate-800 border-2 border-indigo-200 dark:border-indigo-500 ring-2 ring-white dark:ring-slate-800"></div>
                                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-2">
                                    <div>
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Posted a new project "E-commerce Website"</p>
                                        <p class="text-xs text-gray-500 dark:text-slate-400 mt-1">2 hours ago</p>
                                    </div>
                                    <span class="self-start inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-50 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300">
                                        Project
                                    </span>
                                </div>
                            </li>
                            <li class="relative pl-6 pb-6 border-l-2 border-gray-100 dark:border-slate-700 last:pb-0 last:border-0 border-emerald-200">
                                <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-white dark:bg-slate-800 border-2 border-emerald-200 dark:border-emerald-500 ring-2 ring-white dark:ring-slate-800"></div>
                               <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-2">
                                    <div>
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Accepted bid from John Developer</p>
                                        <p class="text-xs text-gray-500 dark:text-slate-400 mt-1">5 hours ago</p>
                                    </div>
                                     <span class="self-start inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-emerald-50 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300">
                                        Bid
                                    </span>
                                </div>
                            </li>
                             <li class="relative pl-6 border-l-2 border-gray-100 dark:border-slate-700 last:pb-0 last:border-l-0 border-purple-200">
                                <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-white dark:bg-slate-800 border-2 border-purple-200 dark:border-purple-500 ring-2 ring-white dark:ring-slate-800"></div>
                               <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-2">
                                    <div>
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Sent message to Sarah Designer</p>
                                        <p class="text-xs text-gray-500 dark:text-slate-400 mt-1">1 day ago</p>
                                    </div>
                                    <span class="self-start inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-50 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300">
                                        Message
                                    </span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <!-- Right Column: Settings & Badges -->
            <div class="space-y-6">
                
                <!-- Quick Actions Menu -->
                 <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 overflow-hidden transition-colors duration-300">
                    <div class="px-6 py-4 border-b border-gray-100 dark:border-slate-700 bg-gray-50/50 dark:bg-slate-800/50">
                        <h3 class="text-base font-semibold text-gray-900 dark:text-white">Quick Actions</h3>
                    </div>
                    <div class="p-3">
                        <a href="#" class="flex items-center gap-3 px-4 py-3 text-gray-700 dark:text-slate-300 hover:bg-gray-50 dark:hover:bg-slate-700 rounded-lg transition-colors group">
                            <div class="w-8 h-8 rounded-lg bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 flex items-center justify-center group-hover:bg-blue-100 dark:group-hover:bg-blue-900/50 transition-colors">
                                <i class="fas fa-lock text-sm"></i>
                            </div>
                            <span class="font-medium text-sm">Change Password</span>
                        </a>
                        <a href="#" class="flex items-center gap-3 px-4 py-3 text-gray-700 dark:text-slate-300 hover:bg-gray-50 dark:hover:bg-slate-700 rounded-lg transition-colors group">
                            <div class="w-8 h-8 rounded-lg bg-purple-50 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 flex items-center justify-center group-hover:bg-purple-100 dark:group-hover:bg-purple-900/50 transition-colors">
                                <i class="fas fa-bell text-sm"></i>
                            </div>
                             <span class="font-medium text-sm">Notifications</span>
                        </a>
                        <a href="#" class="flex items-center gap-3 px-4 py-3 text-gray-700 dark:text-slate-300 hover:bg-gray-50 dark:hover:bg-slate-700 rounded-lg transition-colors group">
                             <div class="w-8 h-8 rounded-lg bg-green-50 dark:bg-green-900/30 text-green-600 dark:text-green-400 flex items-center justify-center group-hover:bg-green-100 dark:group-hover:bg-green-900/50 transition-colors">
                                <i class="fas fa-credit-card text-sm"></i>
                            </div>
                             <span class="font-medium text-sm">Payment Methods</span>
                        </a>
                         <div class="my-2 border-t border-gray-100 dark:border-slate-700"></div>
                         <a href="#" class="flex items-center gap-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors group">
                             <div class="w-8 h-8 rounded-lg bg-red-50 dark:bg-red-900/30 text-red-600 dark:text-red-400 flex items-center justify-center group-hover:bg-red-100 dark:group-hover:bg-red-900/50 transition-colors">
                                <i class="fas fa-trash text-sm"></i>
                            </div>
                             <span class="font-medium text-sm">Delete Account</span>
                        </a>
                    </div>
                </div>
            
                <!-- Profile Strength Widget -->
                <div class="bg-gradient-to-br from-slate-900 to-slate-800 dark:from-blue-900 dark:to-slate-900 rounded-xl shadow-lg p-6 text-white relative overflow-hidden">
                    <div class="relative z-10">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="text-base font-bold">Profile Strength</h3>
                                <p class="text-slate-400 text-xs">Strong profiles win 3x more jobs</p>
                            </div>
                            <span class="bg-green-500 text-white text-xs font-bold px-2 py-1 rounded">85%</span>
                        </div>
                        
                        <div class="w-full bg-slate-700/50 rounded-full h-1.5 mb-4">
                            <div class="bg-green-500 h-1.5 rounded-full" style="width: 85%"></div>
                        </div>
                        
                        <div class="space-y-2 mb-4">
                            <div class="flex items-center gap-2 text-xs text-slate-300">
                                <i class="fas fa-check-circle text-green-400"></i>
                                <span>Email Confirmed</span>
                            </div>
                            <div class="flex items-center gap-2 text-xs text-slate-300">
                                <i class="fas fa-check-circle text-green-400"></i>
                                <span>Payment Verified</span>
                            </div>
                             <div class="flex items-center gap-2 text-xs text-slate-300">
                                <i class="far fa-circle"></i>
                                <span>Add Portfolio Items</span>
                            </div>
                        </div>

                        <button class="w-full py-2 bg-white text-slate-900 font-semibold rounded-lg text-xs hover:bg-gray-100 transition-colors">
                            Complete Information
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>